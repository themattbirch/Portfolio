---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.svelte";

const pageTitle = "Get In Touch With Matt";
const pageDescription = "Get in touch with Matt Birch";
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Wrapper div with a subtle gradient background -->
  <div class="horizontal-gradient-wrapper">
    <!-- Section for Page Title -->
    <section
      class="max-w-4xl mx-auto py-16 sm:py-24 px-4 sm:px-6 lg:px-8 transition-colors duration-300"
    >
      <div class="max-w-screen mx-auto">
        <h1 class="h1-text heading-text text-center mb-8 md:mb-12 fade-in">
          {pageTitle}
        </h1>
        <p class="text-lg text-center">Holla at me using these fckers below!</p>
      </div>
    </section>

    <!-- Enhanced Section for Contact Information Card -->
    <section
      class="max-w-5xl mx-auto py-8 sm:py-16 px-4 sm:px-6 lg:px-8 fade-in"
    >
      <div
        class="bg-gradient-to-r from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-800 p-12 rounded-lg shadow-lg overflow-hidden relative"
      >
        <div
          class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-gray-300 to-gray-400"
        >
        </div>
        <div
          class="flex flex-col md:flex-row justify-between items-center relative z-10"
        >
          <!-- Phone -->
          <div class="text-center md:w-1/3 group">
            <div class="mb-4 transition-all duration-300">
              <i
                class="fas fa-phone text-blue-600 dark:text-blue-200 text-4xl transition-colors duration-300"
              ></i>
            </div>
            <h3
              class="text-xl font-bold text-blue-600 dark:text-blue-200 mb-2 transition-colors duration-300"
            >
              Phone
            </h3>
            <p
              class="text-blue-600 dark:text-blue-200 transition-colors duration-300"
            >
              703-599-3188
            </p>
          </div>

          <!-- Address -->
          <div class="text-center md:w-1/3 mt-8 md:mt-0 group">
            <div class="mb-4 transition-all duration-300">
              <i
                class="fas fa-map-marker-alt text-blue-600 dark:text-blue-200 text-4xl transition-colors duration-300"
              ></i>
            </div>
            <h3
              class="text-xl font-bold text-blue-600 dark:text-blue-200 mb-2 transition-colors duration-300"
            >
              Address
            </h3>
            <p
              class="text-blue-600 dark:text-blue-200 transition-colors duration-300"
            >
              11654 Plaza America Dr. #352<br />
              Reston, Va., 20190
            </p>
          </div>

          <!-- Email -->
          <div class="text-center md:w-1/3 mt-8 md:mt-0 group">
            <div class="mb-4 transition-all duration-300">
              <i
                class="fas fa-envelope text-blue-600 dark:text-blue-200 text-4xl transition-colors duration-300"
              ></i>
            </div>
            <h3
              class="text-xl font-bold text-blue-600 dark:text-blue-200 mb-2 transition-colors duration-300"
            >
              Email
            </h3>
            <p
              class="text-blue-600 dark:text-blue-200 transition-colors duration-300"
            >
              matt@optimizewebsolutions.com
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Combined CTA and Background Image Section with Blur Effect -->
    <section
      class="relative w-full bg-cover bg-center"
      style="background-image: url('/images/me_rocks.png'); height: 60vh;"
    >
      <!-- Text and Button Container -->
      <div
        class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8"
      >
        <div class="fade-in py-10 px-16 rounded-lg text-center">
          <h2
            class="text-3xl sm:text-4xl font-bold mb-4 tracking-tight text-white drop-shadow-lg"
          >
            You know where to find me.
          </h2>
        </div>
      </div>
    </section>

    <!-- Outer Div Section for Contact Form -->
    <section
      class="outer-container max-w-4xl mx-auto py-8 sm:py-16 px-4 sm:px-6 lg:px-8 rounded-lg shadow-lg transition-all duration-300 ease-in-out mb-16"
    >
      <ContactForm client:load />
    </section>
  </div>
</Layout>

<style>
  .horizontal-gradient-wrapper {
    background: linear-gradient(
      to bottom,
      #ffffff,
      #d0d9e7
    ); /* Horizontal gradient */
    min-height: 100vh;
    padding: 2rem 0;
  }

  /* Dark mode gradient */
  :global(.dark) .horizontal-gradient-wrapper {
    background: linear-gradient(
      to right,
      #1f2937,
      #3b536a
    ); /* Softer dark gradient */
  }

  .outer-container {
    background-color: #f1f5f9;
    box-shadow:
      0 4px 6px rgba(0, 0, 0, 0.1),
      0 2px 4px rgba(0, 0, 0, 0.06);
  }

  /* Dark mode adjustment */
  :global(.dark) .outer-container {
    background-color: #0f172a; /* Even darker blue for dark mode */
  }

  /* Hover effect */
  .outer-container:hover {
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
</style>

<script>
  function handleFadeIn() {
    const fadeIns = document.querySelectorAll(".fade-in");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
            observer.unobserve(entry.target); // Stop observing once visible
          }
        });
      },
      {
        threshold: 0.2,
        rootMargin: "0px 0px -100px 0px", // Start fading in slightly before the element is in view
      }
    );

    fadeIns.forEach((fadeIn) => {
      // Check if the element is already visible (e.g., on page load)
      const rect = fadeIn.getBoundingClientRect();
      if (rect.top < window.innerHeight) {
        fadeIn.classList.add("visible");
      } else {
        observer.observe(fadeIn);
      }
    });
  }

  // Run on initial load
  document.addEventListener("DOMContentLoaded", handleFadeIn);

  // Run on each page navigation (for SPA-like behavior)
  document.addEventListener("astro:page-load", handleFadeIn);

  // Fallback for browsers that don't support IntersectionObserver
  if (!("IntersectionObserver" in window)) {
    document
      .querySelectorAll(".fade-in")
      .forEach((el) => el.classList.add("visible"));
  }
</script>
