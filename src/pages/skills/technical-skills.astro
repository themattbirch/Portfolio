---
// src/pages/skills/technical-skills.astro
import SkillsComponent from "@/components/SkillsComponent.astro";
import Layout from "@/layouts/Layout.astro";
import {
  Code,
  Laptop,
  Server,
  Brain,
  Users,
  Smartphone,
  Database,
  GitMerge,
  Settings,
  PenTool,
  Search,
  Globe2,
  Layers,
  BarChart3,
} from "lucide-react";

// --- The 6 Pillars of Expertise ---
const coreSkills = [
  {
    name: "Web Platform Ownership & Execution",
    description:
      "I own and evolve content-led web platforms end to end—aligning UX, CMS structure, integrations, and performance so the platform stays reliable, maintainable, and effective over time.",
    icon: Layers,
  },
  {
    name: "Content-Led UI & Frontend Delivery",
    description:
      "I deliver clear, accessible user interfaces that support real publishing and user flows—building and refining frontends with an emphasis on usability, performance, and long-term maintainability.",
    icon: Laptop,
  },
  {
    name: "CMS Architecture, Governance & Integrations",
    description:
      "I design the CMS foundations that make content easy to create, govern, and publish—structured models, reusable templates, and dependable integrations that keep platforms organized and scalable.",
    icon: Server,
  },
  {
    name: "Analytics, Automation & AI-Assisted Workflows",
    description:
      "I use analytics and automation to improve decisions and workflows—instrumenting measurement, defining KPIs, and applying AI-assisted tools where they meaningfully reduce friction or improve quality.",
    icon: BarChart3, // analytics-first, AI secondary
  },
  {
    name: "Content Strategy, UX & Information Architecture",
    description:
      "I translate business and editorial goals into clear site structure, intuitive navigation, and production-ready content—bringing editorial judgment and UX clarity to complex information.",
    icon: PenTool,
  },
  {
    name: "Responsive & Progressive Web Experiences",
    description:
      "I ensure experiences work consistently across devices—responsive, accessible, and fast—using Progressive Web App patterns when appropriate to support reliability, performance, and modern delivery.",
    icon: Smartphone,
  },
];

// --- Supporting Skills & Tools ---
const additionalSkills = [
  {
    name: "JavaScript & TypeScript",
    description:
      "Modern JavaScript (ES6+) and TypeScript to build maintainable frontends and dependable integrations.",
    icon: Code,
  },
  {
    name: "React & Next.js",
    description:
      "Production-ready interfaces and sites using React and Next.js, with attention to performance, accessibility, and SEO fundamentals.",
    icon: Laptop,
  },
  {
    name: "CMS & Publishing Workflows",
    description:
      "WordPress and headless CMS patterns supporting structured content, editorial workflows, governance, and long-term maintainability.",
    icon: Globe2,
  },
  {
    name: "Databases & Supabase",
    description:
      "PostgreSQL and Supabase-backed platforms to support content, analytics, and application workflows with reliable data modeling.",
    icon: Database,
  },
  {
    name: "Astro",
    description:
      "Content-focused websites built with Astro, prioritizing performance, clarity, and low overhead for long-term maintenance.",
    icon: Settings,
  },
  {
    name: "HTML & CSS",
    description:
      "Semantic HTML and modern CSS (Flexbox, Grid) for accessible, responsive layouts with clear structure and hierarchy.",
    icon: PenTool,
  },
  {
    name: "SEO & Content Strategy",
    description:
      "Technical and on-page SEO, information architecture, and content strategy informed by editorial judgment and analytics.",
    icon: Search,
  },
  {
    name: "Web Analytics & Measurement",
    description:
      "GA4 and Google Tag Manager instrumentation to track engagement, define KPIs, and guide iterative content and UX improvements.",
    icon: BarChart3,
  },
  {
    name: "Version Control & Collaboration",
    description:
      "Git-based workflows that support collaboration, review, and stable long-term maintenance of web platforms.",
    icon: GitMerge,
  },
  {
    name: "Build Systems & Tooling",
    description:
      "Modern tooling (e.g., Vite) to support fast development cycles and efficient, reliable production builds.",
    icon: Settings,
  },
];

const pageTitle = "Technical Toolkit | Matt Birch, Digital Content Strategist";

const pageDescription =
  "An overview of the tools and platforms I use to own and evolve content-led web platforms, supporting CMS governance, UX clarity, analytics, SEO, and long-term performance.";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogImage="/assets/images/technical-skills-programming.jpg"
  fullWidth={true}
>
  <div class="horizontal-gradient-wrapper">
    <!-- Introduction Section -->
    <section class="text-center mx-auto py-12 md:py-20 lg:py-24 xl:py-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="h1-text fade-in-up">My Technical Toolkit</h1>
        <p
          class="mt-6 max-w-2xl mx-auto text-lg text-gray-700 dark:text-gray-300"
        >
          I focus on owning and evolving content-driven web platforms—bringing
          together UX clarity, structured systems, and analytics to turn complex
          requirements into reliable, usable platforms that hold up over time.
        </p>
      </div>
    </section>

    <!-- Core Technical Skills Section -->
    <section class="pb-12 md:pb-20 lg:pb-24 xl:pb-32 fade-in-up">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SkillsComponent skills={coreSkills} />
      </div>
    </section>

    <!-- Additional Expertise Section -->
    <section class="pb-12 md:pb-20 lg:pb-24 xl:pb-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2
          class="text-2xl md:text-3xl lg:text-4xl font-bold text-center pb-12 md:pb-20 lg:pb-24 xl:pb-32 h2-text"
        >
          Supporting Skills & Tools
        </h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {
            additionalSkills.map((skill) => (
              <div class="bg-white dark:bg-gray-800 expertise-grid rounded-lg shadow-md p-6 transform transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
                {" "}
                <div class="flex items-center space-x-4 mb-4">
                  <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                    <skill.icon className="w-6 h-6 text-blue-600 dark:text-blue-300" />
                  </div>
                  <h3 class="text-xl font-semibold text-gray-800 dark:text-white">
                    {skill.name}
                  </h3>
                </div>
                <p class="text-gray-600 dark:text-gray-300">
                  {skill.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .expertise-grid {
    margin-bottom: 1rem;
  }

  .additional-skills {
    color: var(--primary-color);
  }
  .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #f0f4f8, #d9e2ec);
  }

  .horizontal-gradient-wrapper-1 {
    background: linear-gradient(to bottom, #d9e2ec, #f0f4f8);
  }

  :global(.dark) .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #1e3a5f, #243b55);
  }

  :global(.dark) .horizontal-gradient-wrapper-1 {
    background: linear-gradient(to bottom, #243b55, #1e3a5f);
  }
</style>
