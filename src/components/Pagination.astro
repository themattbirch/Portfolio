---
type Props = {
  prevURL?: string;
  nextURL?: string;
};
const { prevURL, nextURL } = Astro.props;
---

<div class="flex justify-between">
  {
    prevURL ? (
      <a
        href={prevURL}
        class="btn btn-primary pagination-button rounded-xl shadow-md transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        Previous
      </a>
    ) : (
      <div />
    )
  }
  {
    nextURL ? (
      <a
        href={nextURL}
        class="btn btn-primary pagination-button rounded-xl shadow-md transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        Next
      </a>
    ) : (
      <div />
    )
  }
</div>
<style>
  .pagination-button:disabled {
    @apply opacity-50 cursor-not-allowed;
  }
</style>
