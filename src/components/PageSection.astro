---
interface Props {
  bgClass?: string;
  py?: string;
  fullWidth?: boolean;
  children: any;
}

const {
  bgClass = "",
  py = "py-12 md:py-20 lg:py-24 xl:py-32",
  fullWidth = false,
} = Astro.props;

const maxWidthClass = fullWidth ? "max-w-screen-2xl" : "max-w-7xl";
---

<section class={`${bgClass} ${py} transition-colors duration-300`}>
  <div class={`${maxWidthClass} mx-auto px-4 sm:px-6 lg:px-8`}>
    <slot />
  </div>
</section>