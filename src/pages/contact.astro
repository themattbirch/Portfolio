---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.svelte";

const pageTitle = "Contact";
const pageDescription = "Get in touch with Matt Birch";
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Section for Page Title -->
  <section
    class="max-w-4xl mx-auto py-8 sm:py-16 px-4 sm:px-6 lg:px-8 transition-colors duration-300"
  >
    <h1 class="h1-text heading-text text-center mb-8 md:mb-12">
      {pageTitle}
    </h1>
  </section>

  <!-- Enhanced Section for Contact Information Card -->
  <section class="max-w-5xl mx-auto py-12 sm:py-16 px-4 sm:px-6 lg:px-8">
    <div
      class="bg-gradient-to-r from-blue-100 to-blue-200 dark:from-blue-900 dark:to-blue-800 p-8 rounded-lg shadow-lg overflow-hidden relative"
    >
      <div
        class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-blue-400 to-blue-600"
      >
      </div>
      <div
        class="flex flex-col md:flex-row justify-between items-center relative z-10"
      >
        <!-- Phone -->
        <div class="text-center md:w-1/3 group">
          <div
            class="bg-white dark:bg-blue-700 rounded-full p-4 mb-4 inline-block shadow-md group-hover:shadow-lg transition-all duration-300"
          >
            <i
              class="fas fa-phone text-blue-600 dark:text-blue-200 text-3xl group-hover:scale-110 transition-transform duration-300"
            ></i>
          </div>
          <h3 class="text-xl font-bold text-blue-800 dark:text-blue-200 mb-2">
            Phone
          </h3>
          <p class="text-blue-700 dark:text-blue-300">703-599-3188</p>
        </div>

        <!-- Address -->
        <div class="text-center md:w-1/3 mt-8 md:mt-0 group">
          <div
            class="bg-white dark:bg-blue-700 rounded-full p-4 mb-4 inline-block shadow-md group-hover:shadow-lg transition-all duration-300"
          >
            <i
              class="fas fa-map-marker-alt text-blue-600 dark:text-blue-200 text-3xl group-hover:scale-110 transition-transform duration-300"
            ></i>
          </div>
          <h3 class="text-xl font-bold text-blue-800 dark:text-blue-200 mb-2">
            Address
          </h3>
          <p class="text-blue-700 dark:text-blue-300">
            11654 Plaza America Dr. #352<br />
            Reston, Va., 20190
          </p>
        </div>

        <!-- Email -->
        <div class="text-center md:w-1/3 mt-8 md:mt-0 group">
          <div
            class="bg-white dark:bg-blue-700 rounded-full p-4 mb-4 inline-block shadow-md group-hover:shadow-lg transition-all duration-300"
          >
            <i
              class="fas fa-envelope text-blue-600 dark:text-blue-200 text-3xl group-hover:scale-110 transition-transform duration-300"
            ></i>
          </div>
          <h3 class="text-xl font-bold text-blue-800 dark:text-blue-200 mb-2">
            Email
          </h3>
          <p class="text-blue-700 dark:text-blue-300">themazzyb@gmail.com</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Guide Element with Slowed-Down Animation -->
  <div class="flex justify-center my-8">
    <div class="slow-bounce">
      <i class="fas fa-chevron-down text-4xl text-blue-600 dark:text-blue-400"
      ></i>
    </div>
  </div>

  <!-- Section for Contact Form with blue background and improved spacing -->
  <section
    class="max-w-4xl mx-auto py-8 sm:py-16 px-4 sm:px-6 lg:px-8 bg-blue-50 dark:bg-blue-900 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 ease-in-out mb-16"
  >
    <ContactForm client:load />
  </section>
</Layout>

<style>
  /* Your existing styles remain unchanged */

  /* Updated section styles */
  section {
    position: relative;
    overflow: hidden;
  }

  section::before {
    content: "";
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: linear-gradient(
      135deg,
      rgba(219, 234, 254, 0.1) 0%,
      rgba(219, 234, 254, 0) 100%
    );
    filter: blur(20px);
    z-index: -1;
  }

  .dark section::before {
    background: linear-gradient(
      135deg,
      rgba(30, 58, 138, 0.1) 0%,
      rgba(30, 58, 138, 0) 100%
    );
  }
</style>
