---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";

// Example projects data
const projects = [
  {
    title: "Gormania",
    description: "Website that highlights this sht business.",
    imageSrc: "/images/gormania.png", // Direct path since it's in 'public/images'
    tags: ["Georgia Boyz"],
    completed: "https://github.com/mattbirch/project-one",
    liveUrl: "https://mattbirch.co/project-one",
  },
  {
    title: "Project Two",
    description: "A brief description of Project Two.",
    imageSrc: "/src/assets/project-two.jpg", // Adjust path as needed if in 'src/assets'
    tags: ["Astro", "Tailwind CSS", "TypeScript"],
    completed: "https://github.com/mattbirch/project-two",
    liveUrl: "https://mattbirch.co/project-two",
  },
];
---

<Layout>
  <section
    class="projects-section py-8 sm:py-16 px-4 sm:px-6 lg:px-8 transition-colors duration-300"
  >
    <div class="max-w-7xl mx-auto">
      <h1
        class="text-3xl sm:text-4xl font-bold text-center mb-8 sm:mb-12 projects-title"
      >
        My Projects
      </h1>
      <div class="projects-container space-y-8 sm:space-y-12">
        {
          projects.map((project) => (
            <div class="mb-8 sm:mb-12">
              <ProjectCard
                title={project.title}
                description={project.description}
                imageSrc={project.imageSrc}
                tags={project.tags}
                completed={project.completed}
                liveUrl={project.liveUrl}
              />
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <style>
    .projects-section {
      background-color: #f9fafb; /* Light background for light mode */
    }

    :global(.dark) .projects-section {
      background-color: #000000; /* Dark black background for dark mode */
    }

    .projects-title {
      color: #1a202c; /* Dark color for light mode */
    }

    :global(.dark) .projects-title {
      color: #ffffff; /* Light color for dark mode */
    }

    .projects-container {
      margin-top: 2rem; /* Add some space between the title and the cards */
    }
  </style>
</Layout>
