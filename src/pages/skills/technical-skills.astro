---
// src/pages/skills/technical-skills.astro
import SkillsComponent from "@/components/SkillsComponent.astro";
import Layout from "@/layouts/Layout.astro";
import {
  Code,
  Laptop,
  Server,
  Brain,
  Users,
  Smartphone,
  Database,
  GitMerge,
  Settings,
  PenTool,
  Search,
  Globe2,
} from "lucide-react";

// --- The 6 Pillars of Expertise ---
const coreSkills = [
  {
    name: "Full-Stack Development",
    description:
      "I build full-stack applications that connect frontend interfaces with backend logic and databases — everything needed to take a product from concept to launch.",
    icon: Code,
  },
  {
    name: "Frontend Architecture",
    description:
      "I specialize in React and Next.js, creating fast, scalable UIs with a focus on component reusability, state management, and design clarity.",
    icon: Laptop,
  },
  {
    name: "Backend & API Development",
    description:
      "I design secure RESTful APIs with Node.js and Express, often powering data-heavy apps like analytics dashboards and sports pipelines.",
    icon: Server,
  },
  {
    name: "AI Integration",
    description:
      "I integrate large language models (GPT-4, Claude, Gemini) into apps, enabling smarter workflows, personalized insights, and data-driven features.",
    icon: Brain,
  },
  {
    name: "Product-Minded Engineering",
    description:
      "With a founder’s mindset, I think about the ‘why’ behind every feature — aligning technical work with business impact.",
    icon: Users,
  },
  {
    name: "Mobile & PWA Development",
    description:
      "I deliver installable Progressive Web Apps (PWAs) that feel native, load instantly, and even work offline.",
    icon: Smartphone,
  },
];

// --- The Toolbox (Additional Expertise) ---
const additionalSkills = [
  {
    name: "JavaScript & TypeScript",
    description:
      "Modern, type-safe JavaScript (ES6+) and TypeScript for reliable, maintainable application logic.",
    icon: Code,
  },
  {
    name: "React & Next.js",
    description:
      "Component-driven UIs with React and production-ready apps with Next.js, optimized for speed and SEO.",
    icon: Laptop,
  },
  {
    name: "Node.js & Express",
    description:
      "Fast, scalable backend services built with Node.js and Express for APIs and core logic.",
    icon: Server,
  },
  {
    name: "Databases & Supabase",
    description:
      "Relational data design with PostgreSQL, plus Supabase for authentication, storage, and auto-generated APIs.",
    icon: Database,
  },
  {
    name: "Astro",
    description:
      "Lightweight, content-focused websites with Astro’s server-first, island-based architecture.",
    icon: Settings,
  },
  {
    name: "HTML5 & CSS3",
    description:
      "Expert in semantic HTML and modern CSS layouts, from Flexbox to Grid, for responsive design.",
    icon: PenTool,
  },
  {
    name: "Version Control (Git)",
    description:
      "Efficient collaboration and codebase management using Git and GitHub.",
    icon: GitMerge,
  },
  {
    name: "SEO & Content Strategy",
    description:
      "Technical SEO and content strategy skills rooted in my media background, boosting organic visibility.",
    icon: Search,
  },
  {
    name: "Build Tools (Vite)",
    description:
      "Fast development environments and optimized builds using Vite, with hot module replacement and bundling.",
    icon: Settings,
  },
  {
    name: "WordPress",
    description:
      "Custom WordPress solutions for legacy projects and small-business sites that need stability and ease of use.",
    icon: Globe2,
  },
];

const pageTitle = "Technical Skills | Matt Birch – Full Stack Engineer";
const pageDescription =
  "A deep dive into my technical toolkit: React, Next.js, Node.js, Supabase, and AI integrations. Explore how I design, build, and scale full-stack web applications with a product-focused mindset.";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogImage="/assets/images/technical-skills-programming.jpg"
  fullWidth={true}
>
  <div class="horizontal-gradient-wrapper">
    <!-- Introduction Section -->
    <section class="text-center mx-auto py-12 md:py-20 lg:py-24 xl:py-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="h1-text fade-in-up">My Technical Toolkit</h1>
        <p
          class="mt-6 max-w-2xl mx-auto text-lg text-gray-700 dark:text-gray-300"
        >
          I design and build products end-to-end — from frontend interfaces and
          APIs to data pipelines and AI integrations. These are the skills I
          rely on most to bring ideas to life.
        </p>
      </div>
    </section>

    <!-- Core Technical Skills Section -->
    <section class="pb-12 md:pb-20 lg:pb-24 xl:pb-32 fade-in-up">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SkillsComponent skills={coreSkills} />
      </div>
    </section>

    <!-- Additional Expertise Section -->
    <section class="pb-12 md:pb-20 lg:pb-24 xl:pb-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2
          class="text-2xl md:text-3xl lg:text-4xl font-bold text-center pb-12 md:pb-20 lg:pb-24 xl:pb-32 additional-skills dark:text-blue-200 skills-heading-color"
        >
          Supporting Skills & Tools
        </h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {
            additionalSkills.map((skill) => (
              <div class="bg-white dark:bg-gray-800 expertise-grid rounded-lg shadow-md p-6 transform transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
                {" "}
                <div class="flex items-center space-x-4 mb-4">
                  <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                    <skill.icon className="w-6 h-6 text-blue-600 dark:text-blue-300" />
                  </div>
                  <h3 class="text-xl font-semibold text-gray-800 dark:text-white">
                    {skill.name}
                  </h3>
                </div>
                <p class="text-gray-600 dark:text-gray-300">
                  {skill.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .expertise-grid {
    margin-bottom: 1rem;
  }

  .additional-skills {
    color: var(--primary-color);
  }
  .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #f0f4f8, #d9e2ec);
  }

  .horizontal-gradient-wrapper-1 {
    background: linear-gradient(to bottom, #d9e2ec, #f0f4f8);
  }

  :global(.dark) .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #1e3a5f, #243b55);
  }

  :global(.dark) .horizontal-gradient-wrapper-1 {
    background: linear-gradient(to bottom, #243b55, #1e3a5f);
  }
</style>
