---
interface Props {
  pageTitle: string;
  skills: Array<{
    name: string;
    description?: string;
    icon?: string;
    level?: string;
  }>;
  SkillsComponent: any;
}

const { pageTitle, skills, SkillsComponent } = Astro.props;
---

<section class="py-8 sm:py-16 bg-gray-100 dark:bg-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="h2-text heading-text font-bold text-center mb-8 sm:mb-16">
      Why These Skills Matter
    </h2>
    <SkillsComponent
      skills={skills}
      class="flex flex-wrap gap-0 bg-gray-100 dark:bg-black"
    />
  </div>
</section>
