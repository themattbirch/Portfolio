---
import SkillsComponent from "@/components/SkillsComponent.astro";
import Layout from "@/layouts/Layout.astro";
import {
  Heart,
  MessageSquare,
  Users,
  Search,
  Brain,
  Clock,
} from "lucide-react";

const skills = [
  {
    name: "Empathy",
    description:
      "Proficient in understanding and being mindful of others' emotional state.",
    icon: Heart,
  },
  {
    name: "Communication",
    description:
      "Excellent communication skills, both written and verbal. This was learned in college, where I earned a communications degree.",
    icon: MessageSquare,
  },
  {
    name: "Teamwork",
    description:
      "Strong ability to work in collaborative environments. I'm a team player who always takes a holistic view working on projects.",
    icon: Users,
  },
  {
    name: "Awareness",
    description:
      "Skilled in being conscious of both my and others' feelings. This helps achieve both stakeholders' and coworkers' goals.",
    icon: Search,
  },
  {
    name: "Problem-Solving",
    description:
      "Analytical thinker with strong problem-solving abilities. Able to break down complex issues and find innovative solutions.",
    icon: Brain,
  },
  {
    name: "Time Management",
    description:
      "Excellent at prioritizing tasks, meeting deadlines and balancing multiple projects efficiently.",
    icon: Clock,
  },
];

const pageTitle = "EQ Skills I've Built";
const pageDescription =
  "Discover the essential soft skills that enhance my daily workflow, from emotional intelligence to effective communication and problem-solving.";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogImage="/assets/images/soft-skills-programming.jpg"
  fullWidth={true}
>
  <div class="soft-skills-gradient-wrapper">
    <!-- Introduction Text Section -->
    <section
      class="text-center mx-auto px-4 md:px-0 py-12 md:py-20 lg:py-24 xl:py-32"
    >
      <div class="max-w-screen mx-auto">
        <h1 class="h1-text fade-in-up">
          {pageTitle}
        </h1>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="pb-12 md:pb-20 lg:pb-24 xl:pb-32 fade-in-up">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SkillsComponent skills={skills} />
        <!-- Text content wrapper -->
        <div
          class="text-content mb-4 mt-12 md:mt-20 text-center bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 rounded-xl shadow-lg p-8 md:p-12 relative overflow-hidden border border-gray-200 dark:border-gray-700"
        >
          <div
            class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-400 to-blue-600"
          >
          </div>
          <div
            class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-1 h-24 bg-blue-400 rounded-full opacity-50"
          >
          </div>
          <div
            class="absolute -right-4 top-1/2 transform -translate-y-1/2 w-1 h-24 bg-blue-600 rounded-full opacity-50"
          >
          </div>

          <!-- Icon -->
          <div class="mx-auto mb-8">
            <Brain
              className="w-12 h-12 text-blue-500 dark:text-blue-400 opacity-80"
            />
          </div>

          <div class="max-w-3xl mx-auto space-y-6 relative z-10">
            <p
              class="text-lg sm:text-xl md:text-2xl font-medium text-gray-800 dark:text-gray-200 leading-relaxed"
            >
              My <span
                class="subtle-pulse text-blue-600 dark:text-blue-400 mx-1"
                >soft skills</span
              > are what set me apart as a developer who does more than just write
              code. They enable me to build better solutions by understanding team
              dynamics, user needs, and project goals. I bring this balanced approach
              to every project I take on.
            </p>
          </div>
        </div>
      </div>
    </section>

    <style>
      .text-content {
        transition: all 0.3s ease-in-out;
      }

      .text-content:hover {
        transform: translateY(-4px);
        box-shadow:
          0 20px 25px -5px rgba(0, 0, 0, 0.1),
          0 10px 10px -5px rgba(0, 0, 0, 0.04);
      }

      .text-content:hover .h-24 {
        height: 32px;
        transition: height 0.3s ease-in-out;
      }

      .text-content:hover .w-12 {
        animation: subtle-pulse 2s infinite;
      }
    </style>
  </div>
</Layout>
