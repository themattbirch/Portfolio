---
import Layout from "../../layouts/Layout.astro";
import TechnicalSkillsComponent from "../../components/TechnicalSkills.astro";

const pageTitle = "Technical Skills";
---

<Layout>
  <section class="py-8 sm:py-16 bg-gray-100 dark:bg-transparent">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1
        class="h1-text text-4xl text-teal-900 sm:text-4xl font-bold text-center mb-8 sm:mb-16"
      >
        {pageTitle}
      </h1>
      <TechnicalSkillsComponent />
    </div>
  </section>
</Layout>

<style>
  :global(.dark) .h1-text {
    color: #ffffff;
  }
</style>
