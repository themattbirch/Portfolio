---
// src/pages/skills/technical-skills.astro
import SkillsComponent from "@/components/SkillsComponent.astro";
import Layout from "@/layouts/Layout.astro";
import {
  Code,
  Laptop,
  Server,
  Brain,
  Users,
  Smartphone,
  Database,
  GitMerge,
  Settings,
  PenTool,
  Search,
  Globe2,
  Layers,
  BarChart3,
} from "lucide-react";

// --- The 6 Pillars of Expertise ---
const coreSkills = [
  {
    name: "Web Platform Ownership & Execution",
    description:
      "I own and maintain content-led web platforms end to end, ensuring frontend experiences, underlying systems, and data flows work together reliably over time.",
    icon: Layers,
  },
  {
    name: "Web Experience & Frontend Execution",
    description:
      "I implement and maintain clear, performant user interfaces using modern frontend tools, with an emphasis on usability, accessibility, and long-term maintainability.",
    icon: Laptop,
  },
  {
    name: "CMS Architecture & Platform Integrations",
    description:
      "I design and support the systems behind websites, including CMS data models, integrations, and backend services that keep content structured and dependable.",
    icon: Server,
  },
  {
    name: "Analytics, Automation & AI-Assisted Workflows",
    description:
      "I apply analytics, automation, and AI-assisted tools where they add value‚Äîsupporting better measurement, smarter workflows, and clearer decision-making.",
    icon: BarChart3, // üîÅ CHANGE from Brain ‚Üí BarChart3 (analytics-first, AI secondary)
  },
  {
    name: "Content Strategy, UX & Information Architecture",
    description:
      "I translate business and editorial goals into clear site structure, intuitive navigation, and UX-focused content that supports engagement and understanding.",
    icon: PenTool,
  },
  {
    name: "Responsive & Progressive Web Experiences",
    description:
      "I deliver responsive, accessible web experiences across devices, including Progressive Web App patterns when appropriate, with a focus on performance and consistency.",
    icon: Smartphone,
  },
];

// --- Supporting Skills & Tools ---
const additionalSkills = [
  {
    name: "JavaScript & TypeScript",
    description:
      "Modern JavaScript (ES6+) and TypeScript used to support reliable, maintainable frontend and integration work.",
    icon: Code,
  },
  {
    name: "React & Next.js",
    description:
      "Component-driven interfaces and production-ready sites using React and Next.js, with attention to performance, accessibility, and SEO fundamentals.",
    icon: Laptop,
  },
  {
    name: "Content Management Systems",
    description:
      "Experience working with WordPress and headless CMS patterns, supporting structured content, editorial workflows, and long-term maintainability.",
    icon: Globe2,
  },
  {
    name: "Databases & Supabase",
    description:
      "Relational data modeling with PostgreSQL and Supabase-backed platforms to support content, analytics, and application workflows.",
    icon: Database,
  },
  {
    name: "Astro",
    description:
      "Content-focused websites built with Astro‚Äôs server-first architecture, prioritizing performance, clarity, and low overhead.",
    icon: Settings,
  },
  {
    name: "HTML & CSS",
    description:
      "Semantic HTML and modern CSS (Flexbox, Grid) used to create accessible, responsive layouts with clear structure.",
    icon: PenTool,
  },
  {
    name: "SEO & Content Strategy",
    description:
      "Technical and on-page SEO, information architecture, and content strategy informed by editorial experience and analytics.",
    icon: Search,
  },
  {
    name: "Web Analytics & Measurement",
    description:
      "Experience implementing and using GA4 and Google Tag Manager to track engagement, define KPIs, and inform iterative improvements.",
    icon: BarChart3,
  },
  {
    name: "Version Control & Collaboration",
    description:
      "Git-based workflows that support collaboration, review, and stable long-term maintenance of web platforms.",
    icon: GitMerge,
  },
  {
    name: "Build & Tooling",
    description:
      "Modern build tools such as Vite used to support fast development cycles and efficient production builds.",
    icon: Settings,
  },
];

const pageTitle = "Technical Toolkit | Matt Birch ‚Äì Digital Content Strategist";

const pageDescription =
  "An overview of the technical tools and platforms I use to support content-led web experiences, including CMS architecture, frontend execution, analytics, SEO, and modern web frameworks.";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogImage="/assets/images/technical-skills-programming.jpg"
  fullWidth={true}
>
  <div class="horizontal-gradient-wrapper">
    <!-- Introduction Section -->
    <section class="text-center mx-auto py-12 md:py-20 lg:py-24 xl:py-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="h1-text fade-in-up">My Technical Toolkit</h1>
        <p
          class="mt-6 max-w-2xl mx-auto text-lg text-gray-700 dark:text-gray-300"
        >
          I focus on owning and evolving content-driven web platforms‚Äîbringing
          together UX clarity, structured systems, and analytics to turn complex
          requirements into reliable, usable experiences.
        </p>
      </div>
    </section>

    <!-- Core Technical Skills Section -->
    <section class="pb-12 md:pb-20 lg:pb-24 xl:pb-32 fade-in-up">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SkillsComponent skills={coreSkills} />
      </div>
    </section>

    <!-- Additional Expertise Section -->
    <section class="pb-12 md:pb-20 lg:pb-24 xl:pb-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2
          class="text-2xl md:text-3xl lg:text-4xl font-bold text-center pb-12 md:pb-20 lg:pb-24 xl:pb-32 h2-text"
        >
          Supporting Skills & Tools
        </h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {
            additionalSkills.map((skill) => (
              <div class="bg-white dark:bg-gray-800 expertise-grid rounded-lg shadow-md p-6 transform transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
                {" "}
                <div class="flex items-center space-x-4 mb-4">
                  <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                    <skill.icon className="w-6 h-6 text-blue-600 dark:text-blue-300" />
                  </div>
                  <h3 class="text-xl font-semibold text-gray-800 dark:text-white">
                    {skill.name}
                  </h3>
                </div>
                <p class="text-gray-600 dark:text-gray-300">
                  {skill.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .expertise-grid {
    margin-bottom: 1rem;
  }

  .additional-skills {
    color: var(--primary-color);
  }
  .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #f0f4f8, #d9e2ec);
  }

  .horizontal-gradient-wrapper-1 {
    background: linear-gradient(to bottom, #d9e2ec, #f0f4f8);
  }

  :global(.dark) .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #1e3a5f, #243b55);
  }

  :global(.dark) .horizontal-gradient-wrapper-1 {
    background: linear-gradient(to bottom, #243b55, #1e3a5f);
  }
</style>
