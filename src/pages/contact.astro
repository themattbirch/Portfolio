---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.svelte";

const pageTitle = "Contact";
const pageDescription = "Get in touch with Matt Birch";
---

<Layout title={pageTitle} description={pageDescription}>
  <section
    class="max-w-4xl mx-auto py-8 sm:py-16 px-4 sm:px-6 lg:px-8 transition-colors duration-300"
  >
    <h1 class="h1-text heading-text text-center mb-8 md:mb-12">
      {pageTitle}
    </h1>
    <ContactForm client:load />
  </section>
</Layout>

<script src="https://kwesforms.com/v2/kf-script.js" defer></script>
