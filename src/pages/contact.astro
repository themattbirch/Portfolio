---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.jsx";

const pageTitle = "Get In Touch With Matt Birch";
const pageDescription =
  "Reach out to Matt via mailing address, email, phone, or contact form for collaborations, inquiries, or just to connect.";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogImage="/assets/images/contact-phone.jpg"
  fullWidth={true}
>
  <div class="horizontal-gradient-wrapper">
    <!-- Page Title -->
    <section
      class="max-w-7xl mx-auto py-12 md:py-20 lg:py-24 xl:py-32 px-4 sm:px-6 md:px-8 fade-in-up"
    >
      <div class="max-w-screen mx-auto">
        <h1 class="h1-text text-center">
          {pageTitle}
        </h1>
      </div>
    </section>

    <!-- Contact Form -->
    <section
      class="max-w-5xl lg:max-w-6xl xl:max-w-7xl mx-auto pb-12 md:pb-20 lg:pb-24 xl:pb-32 px-4 sm:px-6 md:px-8"
    >
      <div
        class="outer-container bg-gray-50 dark:bg-gray-800 p-4 sm:p-6 md:p-8"
      >
        <ContactForm />
      </div>
    </section>

    <!-- Quote -->
    <section
      class="relative w-full flex items-center justify-center h-auto py-8 sm:py-12 md:py-16 bg-gradient-to-r from-slate-700 dark:from-slate-800 to-blue-900 dark:to-slate-600"
    >
      <div class="absolute inset-0 bg-black/5 dark:bg-black/10"></div>
      <div
        class="relative z-10 text-center px-4 sm:px-6 md:px-8 max-w-screen-xl"
      >
        <h2
          class="text-white dark:text-white italic text-xl sm:text-2xl md:text-3xl lg:text-4xl leading-snug sm:leading-tight md:leading-relaxed font-medium"
        >
          "The meeting of two personalities is like the contact of two chemical
          substances: if there is any reaction, both are transformed."
        </h2>
        <p
          class="text-blue-100 dark:text-purple-100 text-sm sm:text-base md:text-lg mt-4 relative text-center sm:text-right font-medium"
        >
          â€” Carl Jung
        </p>
      </div>
    </section>

    <!-- Contact Information -->
    <section
      class="max-w-5xl lg:max-w-6xl xl:max-w-7xl mx-auto py-12 md:py-20 lg:py-24 xl:py-32 px-4 sm:px-6 md:px-8"
    >
      <h2
        class="h2-text text-center font-bold text-gray-800 dark:text-white mb-12"
      >
        Let's connect
      </h2>
      <div
        class="bg-gradient-to-r from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-800 p-6 sm:p-8 rounded-xl shadow-lg overflow-hidden relative"
      >
        <div
          class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-gray-300 to-gray-400 dark:from-gray-600 dark:to-gray-700"
        >
        </div>
        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 items-center relative z-10"
        >
          <!-- Phone -->
          <div
            class="text-center group transition-all duration-300 hover:bg-[#1e3a8a] hover:text-white p-4 sm:p-6 rounded-lg"
          >
            <div class="mb-4 transition-all duration-300">
              <i
                class="fas fa-phone text-[#1e3a8a] dark:text-[#60a5fa] group-hover:text-white text-4xl transition-colors duration-300"
              ></i>
            </div>
            <h3
              class="text-xl font-bold text-gray-700 dark:text-gray-300 group-hover:text-white mb-2 transition-colors duration-300"
            >
              Phone
            </h3>
            <p
              class="text-gray-700 dark:text-gray-300 group-hover:text-white transition-colors duration-300"
            >
              703-599-3188
            </p>
          </div>

          <!-- Address -->
          <div
            class="text-center group transition-all duration-300 hover:bg-[#1e3a8a] hover:text-white p-4 sm:p-6 rounded-lg"
          >
            <div class="mb-4 transition-all duration-300">
              <i
                class="fas fa-map-marker-alt text-[#1e3a8a] dark:text-[#60a5fa] group-hover:text-white text-4xl transition-colors duration-300"
              ></i>
            </div>
            <h3
              class="text-xl font-bold text-gray-700 dark:text-gray-300 group-hover:text-white mb-2 transition-colors duration-300"
            >
              Address
            </h3>
            <p
              class="text-gray-700 dark:text-gray-300 group-hover:text-white transition-colors duration-300"
            >
              11654 Plaza America Dr. #352<br />
              Reston, Va., 20190
            </p>
          </div>

          <!-- Email -->
          <div
            class="text-center group transition-all duration-300 hover:bg-[#1e3a8a] hover:text-white p-4 sm:p-6 rounded-lg sm:col-span-2 lg:col-span-1"
          >
            <div class="mb-4 transition-all duration-300">
              <i
                class="fas fa-envelope text-[#1e3a8a] dark:text-[#60a5fa] group-hover:text-white text-4xl transition-colors duration-300"
              ></i>
            </div>
            <h3
              class="text-xl font-bold text-gray-700 dark:text-gray-300 group-hover:text-white mb-2 transition-colors duration-300"
            >
              Email
            </h3>
            <p
              class="text-gray-700 dark:text-gray-300 group-hover:text-white transition-colors duration-300 text-sm sm:text-base break-words"
            >
              matt@optimizewebsolutions.com
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #ffffff, #dde4ee, #ffffff);
    min-height: 100vh;
  }

  :global(.dark) .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #45617c, #1f2937, #45617c);
  }

  .outer-container {
    @apply shadow-md rounded-lg overflow-hidden;
    transition: box-shadow 0.3s ease;
    will-change: box-shadow;
  }

  .outer-container:hover {
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  :global(.dark) .outer-container:hover {
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.3),
      0 10px 10px -5px rgba(0, 0, 0, 0.2);
  }

  .fade-in-up {
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
    will-change: opacity, transform;
  }

  .fade-in-up.visible {
    opacity: 1;
    transform: translateY(0);
  }

  h2,
  p {
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }
</style>

<script is:inline type="module">
  import { handleFadeIn } from "/scripts/fadeIn.js";
  document.addEventListener("astro:page-load", handleFadeIn);
</script>
