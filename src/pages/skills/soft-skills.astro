---
// src/pages/skills/soft-skills.astro
import SkillsComponent from "@/components/SkillsComponent.astro";
import Layout from "@/layouts/Layout.astro";
import {
  Heart,
  MessageSquare,
  Users,
  Search,
  Brain,
  Gem,
  Clock,
} from "lucide-react";

const skills = [
  {
    name: "Empathy",
    description:
      "I design with the audience in mind. Empathy helps me translate complex information into interfaces and workflows that feel intuitive and genuinely useful.",
    icon: Heart,
  },
  {
    name: "Communication",
    description:
      "With a background in media, I bridge the gap between technical and non-technical stakeholders—clarifying ideas, documenting decisions, and keeping teams aligned.",
    icon: MessageSquare,
  },
  {
    name: "Collaboration",
    description:
      "I thrive in collaborative environments. Whether working with engineers, designers, or content and business partners, I focus on shared understanding and strong outcomes.",
    icon: Users,
  },
  {
    name: "Awareness",
    description:
      "I pay close attention to context—team dynamics, priorities, and changing requirements—so I can anticipate challenges before they create friction.",
    icon: Search,
  },
  {
    name: "Problem-Solving",
    description:
      "I approach challenges methodically, breaking them down, testing assumptions, and arriving at practical, sustainable solutions.",
    icon: Brain,
  },
  {
    name: "Time Management",
    description:
      "I balance focus with flexibility, prioritizing what matters most and delivering consistently without sacrificing quality.",
    icon: Clock,
  },
];

const pageTitle =
  "Soft Skills | Matt Birch – Empathy, Communication & Collaboration";
const pageDescription =
  "An overview of the soft skills that guide my work, including empathy, communication, collaboration, and problem-solving—supporting clarity, trust, and effective digital outcomes.";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogImage="/assets/images/soft-skills-programming.jpg"
  fullWidth={true}
>
  <div class="soft-skills-gradient-wrapper">
    <!-- Introduction Text Section -->
    <section
      class="text-center mx-auto px-4 md:px-0 py-12 md:py-20 lg:py-24 xl:py-32"
    >
      <div class="max-w-screen mx-auto">
        <h1 class="h1-text fade-in-up">Soft Skills I've Built</h1>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="pb-12 md:pb-20 lg:pb-24 xl:pb-32 fade-in-up">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SkillsComponent skills={skills} />
        <!-- Text content wrapper -->
        <div
          class="text-content mb-4 mt-12 md:mt-20 text-center bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 rounded-xl shadow-lg p-8 md:p-12 relative overflow-hidden border border-gray-200 dark:border-gray-700"
        >
          <div
            class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-400 to-blue-600"
          >
          </div>
          <div
            class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-1 h-24 bg-blue-400 rounded-full opacity-50"
          >
          </div>
          <div
            class="absolute -right-4 top-1/2 transform -translate-y-1/2 w-1 h-24 bg-blue-600 rounded-full opacity-50"
          >
          </div>

          <!-- Icon -->
          <div class="mx-auto mb-8">
            <Gem
              className="w-12 h-12 text-blue-500 dark:text-blue-400 opacity-80"
            />
          </div>

          <div class="max-w-3xl mx-auto space-y-6 relative z-10">
            <p
              class="text-lg sm:text-xl md:text-2xl font-medium text-gray-800 dark:text-gray-200 leading-relaxed"
            >
              Technical skill is only half the equation. My background in media
              and communication gives me an additional toolset—built on
              <span class="subtle-pulse text-blue-600 dark:text-blue-400 mx-1">
                empathy, collaboration, and awareness.</span
              >
              This balance allows me to design and support digital platforms that
              are human-centered and built to last.
            </p>
          </div>
        </div>
      </div>
    </section>

    <style>
      .text-content {
        transition: all 0.3s ease-in-out;
      }

      .text-content:hover {
        transform: translateY(-4px);
        box-shadow:
          0 20px 25px -5px rgba(0, 0, 0, 0.1),
          0 10px 10px -5px rgba(0, 0, 0, 0.04);
      }

      .text-content:hover .h-24 {
        height: 32px;
        transition: height 0.3s ease-in-out;
      }

      .text-content:hover .w-12 {
        animation: subtle-pulse 2s infinite;
      }
    </style>
  </div>
</Layout>
