---
import SkillsComponent from "@/components/SkillsComponent.astro";
import Layout from "@/layouts/Layout.astro";
import {
  faHandHoldingHeart,
  faMagnifyingGlassChart,
  faBullhorn,
  faPeopleGroup,
} from "@fortawesome/free-solid-svg-icons";

const skills = [
  {
    name: "Empathy",
    description:
      "Proficient in understanding and being mindful of others' emotional state.",
    icon: faHandHoldingHeart,
  },
  {
    name: "Communication",
    description:
      "Excellent communication skills, both written and verbal. This was learned in college, where I earned a communications degree.",
    icon: faBullhorn,
  },
  {
    name: "Teamwork",
    description:
      "Strong ability to work in collaborative environments. I'm a team player who always takes a holistic view working on proejcts.",
    icon: faPeopleGroup,
  },
  {
    name: "Awareness",
    description:
      "Skilled in being conscious of both my and others' feelings. I leverage this to help achhieve both stakeholders and coworkers' goals.",
    icon: faMagnifyingGlassChart,
  },
];

// Split skills array into two parts
const half = Math.ceil(skills.length / 2);
const skillsPart1 = skills.slice(0, half);
const skillsPart2 = skills.slice(half);

const pageTitle = "Soft Skills I've Built";
const pageDescription =
  "Discover the essential soft skills that enhance my daily workflow, from emotional intelligence to effective communication and problem-solving.";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogImage="/assets/images/soft-skills-programming.jpg"
  fullWidth={true}
>
  <div class="horizontal-gradient-wrapper">
    <!-- Introduction Text Section -->
    <section class="text-center mx-auto py-12 md:py-20 lg:py-24 xl:py-32">
      <div class="max-w-screen mx-auto">
        <h1 class="h1-text mb-4 sm:mb-6 md:mb-8 fade-in-up">
          {pageTitle}
        </h1>
        <p class="text-base sm:text-lg md:text-xl max-w-2xl mx-auto">
          Understanding and refining these soft skills is crucial for
          professional growth, fostering strong team dynamics, and ensuring
          project success.
        </p>
      </div>
    </section>

    <!-- SkillsComponent with split (part 1)-->
    <section class="pb-12 md:pb-20 lg:pb-24 xl:pb-32 fade-in-up">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2
          class="text-2xl md:text-3xl lg:text-4xl font-bold text-center mb-12 text-blue-700 dark:text-blue-200 skills-heading-color"
        >
          A few soft skills I've developed...
        </h2>
        <!-- Render SkillsComponent for first part of skills -->
        <SkillsComponent skills={skillsPart1} />
      </div>
    </section>

    <!-- SkillsComponent with split (part 2)-->
    <section class="mb-12 md:mb-20 lg:mb-24 xl:mb-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2
          class="text-2xl md:text-3xl lg:text-4xl skills-heading-color font-bold text-center mb-6 sm:mb-8 md:mb-12"
        >
        </h2>
        <!-- Render SkillsComponent for second part of skills -->
        <SkillsComponent skills={skillsPart2} />
      </div>
    </section>
  </div>
</Layout>

<style>
  .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #ffffff, #dde4ee, #ffffff);
  }
  :global(.dark) .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #45617c, #374962, #45617c);
  }
</style>

<script type="module" src="/scripts/fadeIn.js"></script>
