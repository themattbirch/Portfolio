---
const services = [
  {
    title: "Custom Web Development",
    description:
      "Tailor-made websites that perfectly align with your brand and business goals.",
  },
  {
    title: "Responsive Design",
    description:
      "Ensure your website looks great and functions flawlessly on all devices.",
  },
  {
    title: "Performance Optimization",
    description:
      "Speed up your website for better user experience and improved SEO rankings.",
  },
  {
    title: "Ongoing Support",
    description:
      "Regular maintenance and updates to keep your website secure and up-to-date.",
  },
];
import Layout from "../layouts/Layout.astro";
import Testimonials from "../components/Testimonials.astro";
import Hero from "../components/Hero.astro";
import SkillsSection from "../components/SkillsSection.jsx";
import CTASection from "../components/CTASection.astro";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faChevronRight } from "@fortawesome/free-solid-svg-icons";



const meHeroImg = "/images/matt-hero-image.png";
---

<Layout fullWidth={true}>
  <!-- Hero Section -->
  <section>
    <Hero />
  </section>


    <!-- What I Can Do For You Section -->

  <section class="py-16 sm:py-24 bg-[#E9EEF4] dark:bg-gray-900 transition-colors duration-300">
  <div
    class="max-w-screen-2xl mx-auto px-4 sm:px-6 flex flex-col lg:flex-row items-center justify-between gap-8"
  >
    <!-- Text Column -->
    <div class="w-full lg:w-3/4 mb-8 lg:mb-0">
      <!-- Add mb-8 for spacing between text and image in smaller screens -->
      <h2 class="h2-text mb-6 text-gray-800 dark:text-gray-100">
        What I Can Do for You
      </h2>
      <p class="text-lg mb-6 text-gray-600 dark:text-gray-300">
        My goal is to transform your digital presence and help your business
        thrive online. Here's how I can help:
      </p>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
        {
          services.map((service) => (
            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md hover:shadow-lg transition duration-300">
              <!-- Container for title and icon -->
              <div class="flex items-center group">
                <!-- Hover effect for title -->
                <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-gray-100 transition-colors duration-300 group-hover:text-blue-600 dark:group-hover:text-blue-400">
                  {service.title}
                </h3>
                <!-- Hover effect for icon -->
                <FontAwesomeIcon
                  icon={faChevronRight}
                  className="w-6 h-6 ml-2 text-blue-500 dark:text-blue-400 p-2 rounded-full transition-all duration-300 group-hover:bg-blue-100 dark:group-hover:bg-blue-900 group-hover:scale-110 group-hover:shadow-md"
                />
              </div>
              <p class="text-gray-600 dark:text-gray-300">
                {service.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Image Column -->
   <div class="w-full lg:w-1/4 flex justify-center">
  <img
    src={meHeroImg}
    alt="Matt showcasing skills for clients"
    class="w-4/5 h-auto object-cover"
  />
</div>
</section>

  <section
    class="testimonials-section max-w-7xl py-12 sm:py-16 md:py-24 mx-auto px-4 sm:px-6"
  >
    <h2 class="h2-text text-center mb-8 sm:mb-12 pb-2 relative">
      Just ask my clients what they think...
    
    </h2>
    <div
      class="testimonial-container overflow-hidden rounded-full max-w-7xl mx-auto"
    >
      <Testimonials />
    </div>
  </section>


<!-- Unique Sales Proposition Area -->
<section class="py-24 max-w-screen-2xl mx-auto px-4 sm:px-6">
  <h2 class="h2-text mb-6">
    ...They Know Why I'm Different Than Other Web Developers
  </h2>
  <div class="px-4 sm:px-6 max-w-3xl"> <!-- Reduced max-width for content -->
    <!-- Flexbox container for the two columns -->
    <div class="flex justify-between space-x-4"> <!-- Reduced space between the two columns -->
      <!-- Left column: 2 list items -->
      <ul class="list-disc space-y-4 w-1/2">
        <li>Mastery of modern web technologies and frameworks</li>
        <li>User-centric design approach for intuitive interfaces</li>
      </ul>

      <!-- Right column: 2 list items -->
      <ul class="list-disc space-y-4 w-1/2">
        <li>Strong focus on performance optimization and accessibility</li>
        <li>Collaborative mindset and excellent communication skills</li>
      </ul>
    </div>
  </div>
</section>

    <!-- Skills Section Wrapper with Background Color -->
  <section class="bg-[#e6ebf2] dark:bg-gray-900 py-12 sm:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <SkillsSection client:load />
    </div>
  </section>


  <section class="pt-16 sm:pt-24 pb-4 sm:py-8 max-w-screen-xl mx-auto px-4 sm:px-6 text-center">
  <h2 class="h2-text mb-10 text-center text-gray-800 dark:text-gray-100">
    What You See Is What You Get
  </h2>

  <div class="flex justify-center">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 justify-items-center">
      <!-- Left Column -->
      <ul class="space-y-6">
        <li class="flex items-start text-lg text-gray-700 dark:text-gray-300 hover:transform hover:scale-110 transition duration-300">
          <svg class="icon-checkmark w-6 h-6 mr-3 text-blue-700 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
          <span>Consistent</span>
        </li>
        <li class="flex items-start text-lg text-gray-700 dark:text-gray-300 hover:transform hover:scale-110 transition duration-300">
          <svg class="icon-checkmark w-6 h-6 mr-3 text-blue-700 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
          <span>Communicative</span>
        </li>
      </ul>

      <!-- Right Column -->
      <ul class="space-y-6">
        <li class="flex items-start text-lg text-gray-700 dark:text-gray-300 hover:transform hover:scale-110 transition duration-300">
          <svg class="icon-checkmark w-6 h-6 mr-3 text-blue-700 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
          <span>Experienced</span>
        </li>
        <li class="flex items-start text-lg text-gray-700 dark:text-gray-300 hover:transform hover:scale-110 transition duration-300">
          <svg class="icon-checkmark w-6 h-6 mr-3 text-blue-700 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
          <span>Reliable</span>
        </li>
      </ul>
    </div>
  </div>

  <!-- Subtle underline effect -->
  <div class="flex justify-center my-12">
    <div class="w-12 border-t-2 border-gray-300 dark:border-gray-600"></div>
  </div>

  <!-- CTA Card -->
  <CTASection />
</section>


<style>
  .swiper-button-prev,
  .swiper-button-next {
    color: var(--swiper-navigation-color, var(--testimonial-text));
  }

  .swiper-pagination-bullet {
    background: var(--swiper-pagination-color, var(--testimonial-text));
  }

.why-different  {
    width: 270ch;
    overflow: hidden;
    white-space: wrap;
        text-overflow: ellipsis;

}

 .icon-checkmark {
  transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
}

/* Hover Effect for icons */
li:hover .icon-checkmark {
  transform: scale(1.3);
  opacity: 1;
}

li:hover span {
  color: #1d4ed8;
  font-weight: 500; /* Adds a color change to text on hover */
}

</style>