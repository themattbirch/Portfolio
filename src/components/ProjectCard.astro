---
import { Image } from "astro:assets";

export interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  category: string;
  keyFeatures: string[];
  link: string;
}

const { title, description, image, category, keyFeatures, link } = Astro.props;
---

<div
  class="project-card bg-white dark:bg-gray-800 rounded-3xl overflow-hidden shadow-xl max-w-7xl mx-auto transition-all duration-300 hover:scale-105"
>
  <div class="flex flex-col md:flex-row md:h-[450px]">
    <Image
      class="w-full md:w-3/5 h-64 md:h-full object-cover transition-transform duration-300"
      src={image}
      alt={title}
    />
    <div
      class="p-8 md:w-2/5 flex flex-col items-center justify-center text-center h-full space-y-6"
    >
      <span
        class="text-gray-500 dark:text-gray-400 uppercase tracking-widest text-sm"
      >
        {category}
      </span>
      <h2
        class="font-serif text-3xl font-bold text-gray-800 dark:text-white transition-colors duration-300"
      >
        {title}
      </h2>
      <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
        {description}
      </p>
      <div>
        <span class="font-bold text-gray-700 dark:text-gray-200 block mb-2"
          >Key Features:</span
        >
        <div class="flex flex-wrap justify-center gap-3">
          {
            keyFeatures.map((feature) => (
              <span class="feature-tag bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-3 py-1 rounded-full text-sm transition-all duration-300">
                {feature}
              </span>
            ))
          }
        </div>
      </div>
      <div class="space"></div>
      <a href={link} target="_blank" rel="noopener noreferrer">
        <button
          class="btn btn-primary rounded-full shadow-md transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          Visit Site
        </button>
      </a>
    </div>
  </div>
</div>

<style>
  .project-card {
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 30px rgba(0, 0, 0, 0.2);
  }
  .project-card:hover img {
    transform: scale(1.05);
  }
  .project-card:hover h2 {
    color: #1d4ed8; /* Blue color on hover for light mode */
  }

  /* Dark mode styles */
  :root.dark .project-card:hover h2,
  [data-theme="dark"] .project-card:hover h2 {
    color: #3b82f6; /* Blue color on hover for dark mode */
  }

  .feature-tag:hover {
    background-color: #3b82f6;
    color: #fff;
  }

  :root.dark .project-card,
  [data-theme="dark"] .project-card {
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }
  :root.dark .project-card:hover,
  [data-theme="dark"] .project-card:hover {
    box-shadow: 0 20px 30px rgba(0, 0, 0, 0.4);
  }
</style>
