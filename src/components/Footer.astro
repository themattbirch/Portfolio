---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: "GitHub", url: "https://github.com/themattbirch", icon: "github" },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/themattbirch",
    icon: "linkedin",
  },
  { name: "X (Twitter)", url: "https://x.com/themattbirch", icon: "twitter" },
];
---

<footer class="bg-gradient-to-r from-gray-800 to-blue-950 mt-auto">
  <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6">
    <div
      class="h-px bg-gradient-to-r from-transparent via-gray-700 to-transparent mb-4 sm:mb-6"
    >
    </div>
    <div
      class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0"
    >
      <div class="p-2 sm:p-3 rounded-lg">
        <p class="text-xs sm:text-sm text-gray-400">
          &copy; {currentYear} Matt Birch. All rights reserved.
        </p>
      </div>
      <nav class="flex space-x-4 sm:space-x-6">
        {
          socialLinks.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="neumorphic-button p-2 rounded-full text-gray-400 hover:text-white transition-colors duration-200"
              aria-label={link.name}
            >
              <span class="sr-only">{link.name}</span>
              <i
                class={`fab fa-${link.icon} text-lg sm:text-xl`}
                aria-hidden="true"
              />
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</footer>
