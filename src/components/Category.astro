---
type Props = {
  category: string;
};

const { category } = Astro.props;
import BreadCrumb from "./BreadCrumb.astro";
---

<BreadCrumb current={category} parent="Blog" />

<a
  href={`/category/${category}`}
  class="dark:text-darkModeText text-teal-900 rounded-3xl p-2 uppercase text-xl border-2 border-teal-900
    whitespace-nowrap"
>
  {category}
</a>

<style>
  :global(.dark) .category-text {
    color: #ffffff;
  }
</style>
