---
export interface Skill {
  name: string;
  description?: string;
  icon?: string;
  level?: string;
}

interface Props {
  skills: Skill[];
  split?: boolean;
}

const { skills, split = false } = Astro.props;

// Split skills array if split prop is true
const half = Math.ceil(skills.length / 2);
const skillsPart1 = split ? skills.slice(0, half) : skills;
---

<section class="skills-section">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="skills-grid">
      {
        skillsPart1.map((skill, index) => (
          <div class="skill-card bg-white dark:bg-gray-800 rounded-lg shadow-md border border-transparent dark:border-gray-700 mb-4 sm:mb-6">
            <button
              class="skill-header w-full text-left p-3 sm:p-4 md:p-6 relative"
              data-skill-toggle={index}
              aria-expanded="false"
            >
              <div class="icon-wrapper absolute left-4 top-1/2 -translate-y-1/2">
                <i class={`fas ${skill.icon} text-2xl text-blue-700`} />
              </div>
              <div class="text-wrapper sm:text-center pl-12 pr-8">
                <div class="text-lg font-semibold text-gray-700 dark:text-gray-200">
                  {skill.name}
                </div>
              </div>
              <span class="toggle-icon text-xl text-gray-500 dark:text-gray-200 absolute right-4 top-1/2 -translate-y-1/2">
                &#x25BC;
              </span>
            </button>
            <div class="skill-content p-0 m-0 hidden">
              <div class="content-wrapper p-0 m-0">
                <div class="py-3 sm:py-4 md:py-6 px-2 sm:px-4 md:px-6 bg-gray-50 dark:bg-black">
                  <p class="text-gray-600 dark:text-gray-300 text-center">
                    {skill.description}
                  </p>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .skill-header {
    min-height: 6rem;
    cursor: pointer;
    position: relative;
    padding: 1.25rem 1rem;
  }

  .icon-wrapper {
    width: 40px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text-wrapper {
    width: 100%;
    text-align: center; /* Center align text on mobile */
    padding-left: 0; /* Remove left padding for center alignment */
    padding-right: 0; /* Remove right padding for center alignment */
  }

  @media (min-width: 640px) {
    .text-wrapper {
      padding-left: 3rem; /* Restore left padding for larger screens */
      padding-right: 2rem; /* Restore right padding for larger screens */
      text-align: center; /* Align text to the left for larger screens */
    }
  }

  .content-wrapper {
    width: 100%;
  }
  .toggle-icon {
    transition: transform 0.3s ease;
    display: inline-block;
  }

  .skill-header[aria-expanded="true"] .toggle-icon {
    transform: rotate(180deg);
  }

  .skill-content {
    display: none;
  }

  .skill-content.active {
    display: block;
    width: 100%; /* Full viewport width */
    position: relative;
  }

  @media (max-width: 840px) {
    .grid-cols-1 {
      grid-template-columns: 1fr; /* Stacks the columns into one */
    }
  }

  /* For 841px and above, ensure grid remains intact */
  @media (min-width: 801px) {
    .grid-cols-2 {
      grid-template-columns: repeat(2, minmax(0, 1fr)); /* Two-column layout */
    }
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .skills-grid {
      gap: 1.5rem;
    }
  }

  @media (min-width: 768px) {
    .skills-grid {
      gap: 2rem;
    }
  }
</style>

<script>
  function initializeSkillToggles() {
    const skillCards = document.querySelectorAll<HTMLElement>(".skill-card");

    skillCards.forEach((card, index) => {
      let header = card.querySelector(".skill-header");
      const content = card.querySelector<HTMLElement>(".skill-content");

      if (!header || !content) return;

      // Clear any previous event listeners to avoid multiple bindings
      header.replaceWith(header.cloneNode(true));
      header = card.querySelector(".skill-header");

      header?.addEventListener("click", () => {
        const isExpanded = header.getAttribute("aria-expanded") === "true";

        // Close all other cards
        skillCards.forEach((otherCard, otherIndex) => {
          if (otherIndex !== index) {
            const otherHeader =
              otherCard.querySelector<HTMLElement>(".skill-header");
            const otherContent =
              otherCard.querySelector<HTMLElement>(".skill-content");
            if (otherHeader && otherContent) {
              otherHeader.setAttribute("aria-expanded", "false");
              otherContent.style.maxHeight = "0px";
              otherContent.style.marginBottom = "0px";
              otherContent.classList.remove("active");
            }
          }
        });

        // Toggle the clicked card
        if (isExpanded) {
          header.setAttribute("aria-expanded", "false");
          content.style.maxHeight = "0px";
          content.style.marginBottom = "0px";
          content.classList.remove("active");
        } else {
          header.setAttribute("aria-expanded", "true");
          content.style.maxHeight = content.scrollHeight + 40 + "px"; // Add extra space
          content.style.marginBottom = "20px"; // Add margin at the bottom
          content.classList.add("active");
        }
      });
    });
  }

  document.addEventListener("astro:page-load", initializeSkillToggles);
  window.addEventListener("themeChange", initializeSkillToggles);
  initializeSkillToggles();
</script>
