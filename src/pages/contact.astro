---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.jsx";

const pageTitle = "Get In Touch With Matt";
const pageDescription = "Get in touch with Matt Birch";
---

<Layout title={pageTitle} description={pageDescription} fullWidth={true}>
  <div class="horizontal-gradient-wrapper">
    <!-- Section for Page Title -->
    <section
      class="max-w-5xl mx-auto py-16 sm:py-24 md:py-32 px-4 sm:px-6 md:px-8 fade-in-up transition-colors duration-300"
    >
      <div class="max-w-screen mx-auto">
        <h1 class="h1-text text-center">
          {pageTitle}
        </h1>
      </div>
    </section>

    <!-- Contact Form -->
    <section
      class="max-w-5xl mx-auto pb-16 sm:pb-24 md:pb-32 px-4 sm:px-6 md:px-8"
    >
      <div
        class="outer-container transition-all duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-[1.02] bg-gray-50 dark:bg-gray-800"
      >
        <ContactForm />
      </div>
    </section>

    <!-- Quote Section with Responsive Adjustments for md -->
    <section
      class="relative w-full flex items-center justify-center h-auto py-12 bg-gradient-to-r from-blue-900 to-gray-800"
    >
      <div class="absolute inset-0 bg-black opacity-50"></div>
      <div
        class="relative z-10 text-center px-4 md:px-6 lg:px-8 max-w-screen-xl"
      >
        <h2
          class="text-white italic text-2xl sm:text-3xl md:text-4xl font-bold leading-snug sm:leading-tight md:leading-relaxed"
        >
          "The meeting of two personalities is like the contact of two chemical<br
          />
          substances: if there is any reaction, both are transformed."
        </h2>
        <p
          class="text-gray-400 text-base sm:text-lg md:text-xl mt-4 relative text-center sm:text-right md:text-right"
        >
          â€” Carl Jung
        </p>
      </div>
    </section>

    <!-- Contact Information Section -->
    <section
      class="max-w-5xl mx-auto py-16 sm:py-24 md:py-32 px-8 sm:px-10 md:px-12"
    >
      <div class="contact-info-grid mb-12">
        <h2 class="h2-text text-center font-bold text-gray-800 dark:text-white">
          Let's connect
        </h2>
      </div>
      <div
        class="bg-gradient-to-r from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-800 p-12 rounded-xl shadow-lg overflow-hidden relative"
      >
        <div
          class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-gray-300 to-gray-400 dark:from-gray-600 dark:to-gray-700"
        >
        </div>
        <div
          class="flex flex-col lg:flex-row justify-evenly items-center relative z-10 space-y-8 md:space-y-0 md:space-x-8"
        >
          <!-- Phone -->
          <div
            class="text-center group transition-all duration-300 hover:bg-[#1e3a8a] hover:text-white p-6 md:p-8 rounded-lg"
          >
            <div class="mb-4 transition-all duration-300">
              <i
                class="fas fa-phone text-[#1e3a8a] dark:text-[#60a5fa] group-hover:text-white text-4xl transition-colors duration-300"
              ></i>
            </div>
            <h3
              class="text-xl font-bold text-gray-700 dark:text-gray-300 group-hover:text-white mb-2 transition-colors duration-300"
            >
              Phone
            </h3>
            <p
              class="text-gray-700 dark:text-gray-300 group-hover:text-white transition-colors duration-300"
            >
              703-599-3188
            </p>
          </div>

          <!-- Address -->
          <div
            class="text-center group transition-all duration-300 hover:bg-[#1e3a8a] hover:text-white p-6 md:p-8 rounded-lg"
          >
            <div class="mb-4 transition-all duration-300">
              <i
                class="fas fa-map-marker-alt text-[#1e3a8a] dark:text-[#60a5fa] group-hover:text-white text-4xl transition-colors duration-300"
              ></i>
            </div>
            <h3
              class="text-xl font-bold text-gray-700 dark:text-gray-300 group-hover:text-white mb-2 transition-colors duration-300"
            >
              Address
            </h3>
            <p
              class="text-gray-700 dark:text-gray-300 group-hover:text-white transition-colors duration-300"
            >
              11654 Plaza America Dr. #352<br />
              Reston, Va., 20190
            </p>
          </div>

          <!-- Email -->
          <div
            class="text-center group transition-all duration-300 hover:bg-[#1e3a8a] hover:text-white p-6 md:p-8 rounded-lg"
          >
            <div class="mb-4 transition-all duration-300">
              <i
                class="fas fa-envelope text-[#1e3a8a] dark:text-[#60a5fa] group-hover:text-white text-4xl transition-colors duration-300"
              ></i>
            </div>
            <h3
              class="text-xl font-bold text-gray-700 dark:text-gray-300 group-hover:text-white mb-2 transition-colors duration-300"
            >
              Email
            </h3>
            <p
              class="text-gray-700 dark:text-gray-300 group-hover:text-white transition-colors duration-300"
            >
              matt@optimizewebsolutions.com
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #d0d9e7, #ffffff, #d0d9e7);
    min-height: 100vh;
  }

  /* Dark mode gradient */
  :global(.dark) .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #1f2937, #45617c, #1f2937);
  }

  .outer-container {
    background-color: #f1f5f9;
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05),
      0 0 0 1px rgba(0, 0, 0, 0.05);
    border-radius: 1rem;
    overflow: hidden;
    padding: 2rem;
  }

  /* Dark mode adjustment */
  :global(.dark) .outer-container {
    background-color: #0f172a;
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.3),
      0 4px 6px -2px rgba(0, 0, 0, 0.2),
      0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  /* Hover effect */
  .outer-container:hover {
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04),
      0 0 0 1px rgba(0, 0, 0, 0.05);
  }

  :global(.dark) .outer-container:hover {
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.3),
      0 10px 10px -5px rgba(0, 0, 0, 0.2),
      0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  .form-input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--color-gray-dark);
    border-radius: 0.375rem;
    margin-bottom: 1rem;
  }

  .contact-info-grid {
    display: flex;
    justify-content: center; /* Horizontally centers content */
    align-items: center; /* Vertically centers content */
    text-align: center; /* Ensures text inside is centered */
    width: 100%; /* Ensure the container takes full width */
  }

  @media (min-width: 768px) {
    .contact-info-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

<script type="module" src="/scripts/fadeIn.js"></script>
