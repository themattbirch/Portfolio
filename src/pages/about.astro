---
import Layout from "../layouts/Layout.astro";
const headshot = "/images/headshot-tan-tee-2.jpg";
const image1 = "/images/new-illustration.png";
const image2 = "/images/teamwork.jpeg";
const pageTitle = "About Matt Birch | Web Developer";
const pageDescription =
  "Learn about Matt Birch's journey as a front-end web developer, his skills, and his approach to creating exceptional web experiences.";
---

<Layout title={pageTitle} description={pageDescription}>
  <div
    class="bg-gradient-to-b from-white via-gray-100 to-white dark:from-gray-900 dark:via-gray-800 dark:to-gray-900"
  >
    <!-- About Section with Headshot -->
    <section class="py-16 sm:py-24 text-center">
      <h1
        class="text-4xl sm:text-5xl font-bold mb-8 text-gray-800 dark:text-white fade-in"
      >
        {pageTitle}
      </h1>

      <!-- Image Container -->
      <div class="mb-12 fade-in">
        <div
          class="inline-block rounded-full p-1 bg-gradient-to-r from-gray-300 to-gray-400 dark:from-gray-600 dark:to-gray-500 shadow-lg transition duration-300 ease-in-out hover:-translate-y-1 hover:shadow-xl"
        >
          <img
            src={headshot}
            alt="Matt Birch headshot"
            class="w-48 h-48 sm:w-64 sm:h-64 rounded-full border-2 border-white dark:border-gray-800"
            width="256"
            height="256"
          />
        </div>

        <!-- Enhanced Introduction Text -->
        <p
          class="text-lg sm:text-xl mt-6 leading-relaxed max-w-2xl mx-auto text-gray-700 dark:text-gray-300"
        >
          <span class="font-bold italic text-blue-600 dark:text-blue-400"
            >Hello!</span
          >
          <span class="font-medium"> I'm Matt Birch, </span>
          <span class="italic"> a passionate front-end web developer </span>
          with expertise in
          <span class="font-semibold">HTML</span>,
          <span class="font-semibold">CSS</span>,
          <span class="font-semibold">JavaScript</span>,
          <span class="font-semibold">Astro</span>, and
          <span class="font-semibold">React</span>.
        </p>
      </div>
    </section>

    <!-- Who I Am Section -->
    <section
      class="py-16 sm:py-24 bg-blue-50 dark:bg-gray-800 relative overflow-hidden"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="md:grid md:grid-cols-2 gap-16 items-center">
          <!-- Text Column -->
          <div class="text-left mb-8 md:mb-0">
            <h2
              class="text-3xl font-bold mb-6 text-blue-800 dark:text-blue-300 fade-in"
            >
              Who I Am
            </h2>
            <p
              class="text-lg leading-relaxed text-gray-700 dark:text-gray-300 fade-in"
            >
              I'm someone who loves nature, coffee, and people. My unique
              journey has shaped me into a developer who prioritizes both
              quality work and human connection. I thrive on collaboration and
              building meaningful digital experiences.
            </p>
            <div class="mt-6">
              <a
                href="#"
                class="text-blue-600 dark:text-blue-400 font-semibold hover:text-blue-800 dark:hover:text-blue-300 transition-colors duration-300"
                >Learn more about my journey â†’</a
              >
            </div>
          </div>

          <!-- Image Column -->
          <div class="fade-in">
            <img
              src={image1}
              alt="Illustration"
              class="w-full h-auto object-cover rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-300"
            />
          </div>
        </div>
      </div>
      <div
        class="absolute top-0 right-0 w-64 h-64 bg-blue-100 dark:bg-blue-900 rounded-full -mr-32 -mt-32 opacity-50"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 w-64 h-64 bg-blue-100 dark:bg-blue-900 rounded-full -ml-32 -mb-32 opacity-50"
      >
      </div>
    </section>

    <!-- What It's Like to Work With Me Section -->
    <section
      class="py-16 sm:py-24 bg-gradient-to-br from-white to-gray-100 dark:from-gray-900 dark:to-gray-800 relative overflow-hidden"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="md:grid md:grid-cols-2 gap-16 items-center">
          <!-- Image Column -->
          <div class="mb-8 md:mb-0 order-2 md:order-1 fade-in">
            <img
              src={image2}
              alt="Teamwork Illustration"
              class="w-full h-auto object-cover rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-300"
            />
          </div>
          <!-- Text Column -->
          <div class="text-left order-1 md:order-2">
            <h2
              class="text-3xl font-bold mb-6 text-gray-800 dark:text-white fade-in"
            >
              What It's Like To Work With Me
            </h2>
            <p
              class="text-lg leading-relaxed text-gray-700 dark:text-gray-300 fade-in"
            >
              My approach emphasizes communication and collaboration. I ensure
              that every step of the project is transparent and efficient. I'm
              easy to work with and always strive to exceed expectations.
            </p>
            <ul class="mt-6 space-y-2">
              <li class="flex items-center text-gray-700 dark:text-gray-300">
                <svg
                  class="w-5 h-5 mr-2 text-green-500 dark:text-green-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Clear communication
              </li>
              <li class="flex items-center text-gray-700 dark:text-gray-300">
                <svg
                  class="w-5 h-5 mr-2 text-green-500 dark:text-green-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Collaborative approach
              </li>
              <li class="flex items-center text-gray-700 dark:text-gray-300">
                <svg
                  class="w-5 h-5 mr-2 text-green-500 dark:text-green-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Attention to detail
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div
        class="absolute top-0 left-0 w-64 h-64 bg-gray-200 dark:bg-gray-700 rounded-full -ml-32 -mt-32 opacity-50"
      >
      </div>
      <div
        class="absolute bottom-0 right-0 w-64 h-64 bg-gray-200 dark:bg-gray-700 rounded-full -mr-32 -mb-32 opacity-50"
      >
      </div>
    </section>
  </div>

  <!-- Combined CTA and Background Image Section -->
  <section
    class="relative w-full bg-cover bg-center"
    style="background-image: url('/images/me_rocks.png'); height: 100vh;"
  >
    <div class="absolute inset-0 bg-black bg-opacity-10">
      <div
        class="absolute top-[2%] left-1/2 transform -translate-x-1/2 w-full max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 text-center"
      >
        <div
          class="bg-white/10 backdrop-blur-md py-10 px-16 rounded-full inline-block shadow-md"
        >
          <h3
            class="text-3xl sm:text-4xl font-bold mb-4 tracking-tight text-white drop-shadow-sm"
          >
            You know where to find me.
          </h3>
          <p class="text-xl sm:text-2xl mb-8 text-white drop-shadow-sm">
            You can hire me.
          </p>
          <a
            href="/contact"
            class="inline-block bg-teal-500 text-white
        hover:bg-teal-600 font-semibold rounded-full px-8 py-3 transition-colors
        duration-300 transform hover:scale-105 shadow"
          >
            Let's Connect
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Simple fade-in animation */
  .fade-in {
    opacity: 0;
    animation: fadeIn 1.5s forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
</style>
