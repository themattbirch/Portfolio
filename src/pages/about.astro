---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import ContentSection from "../components/ContentSection.astro";
import headshot from "../assets/images/matt-birch-headshot.webp";
import myApproach from "../assets/images/approach-to-work.webp";
import whoIam from "../assets/images/who-i-am.webp";
import passionateAbout from "../assets/images/my-passions-music-beach.webp";
import workWithMe from "../assets/images/teamwork.webp";
import meRocks from "../assets/images/me_rocks.png";

const pageTitle = "About Matt Birch | Web Developer";
const pageDescription =
  "Learn about Matt Birch's journey as a front-end web developer, his skills, and his approach to creating exceptional web experiences.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Fragment slot="head">
    <link rel="preload" as="image" href={headshot.src} />
  </Fragment>
  <div class="horizontal-gradient-wrapper">
    <!-- About Section with Headshot -->
    <section class="py-16 sm:py-24 md:py-32 text-center">
      <h1 class="h1-text text-center mb-8 md:mb-12">
        {pageTitle}
      </h1>
      <div class="pt-8 sm:pt-16 fade-in-up">
        <div
          class="inline-block rounded-full p-1 bg-gradient-to-r from-gray-300 to-gray-400 dark:from-gray-600 dark:to-gray-500 shadow-lg transition duration-300 ease-in-out hover:-translate-y-1 hover:shadow-xl"
          style="background-color: transparent;"
        >
          <div class="relative inline-block">
            <Image
              src={headshot}
              alt="Matt Birch headshot"
              class="w-48 h-48 sm:w-64 sm:h-64 rounded-full border-4 border-white dark:border-gray-800 shadow-inner"
              width={256}
              height={256}
              loading="eager"
            />
          </div>
        </div>
      </div>

      <!-- Enhanced Introduction Text -->
      <p
        class="text-lg sm:text-xl pt-8 sm:pt-16 pb-8 leading-relaxed max-w-2xl mx-auto text-gray-700 dark:text-gray-300"
      >
        <span class="font-bold text-blue-600 dark:text-blue-400">Hello!</span>
        <span class="intro-text">
          I'm Matt Birch, a passionate front-end web developer with expertise in <strong
            >HTML</strong
          >, <strong>CSS</strong>, <strong>JavaScript</strong>, <strong
            >Astro</strong
          >, and <strong>React</strong>.
        </span>

        <!-- Styled Resume Download Button -->
        <div class="mt-8">
          <a
            href="/path-to-your-resume.pdf"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary rounded-full py-4 shadow-md transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            Download My Resume
          </a>
        </div>
      </p>
    </section>
  </div>

  <div class="horizontal-gradient-wrapper-2">
    <section class="fade-in-up">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- My Approach To Work Section -->
        <ContentSection
          title="My Approach To Work"
          text="I'm someone who loves nature, coffee, and people. My unique journey has shaped me into a developer who prioritizes both quality work and human connection. I thrive on collaboration and building meaningful digital experiences."
          imageSrc={myApproach.src}
          imageAlt="Man working in front of computer typing on keyboard"
        />

        <!-- Who I Am Section (with reversed layout) -->
        <ContentSection
          title="Who I Am"
          text="I'm someone who loves nature, coffee, and people. My unique journey has shaped me into a developer who prioritizes both quality work and human connection. I thrive on collaboration and building meaningful digital experiences."
          imageSrc={whoIam.src}
          imageAlt="Man waving in front of computer"
          reverse={true}
        />
      </div>
    </section>

    <!-- Combined CTA and Background Image Section  -->
    <section
      class="relative w-full bg-cover bg-center"
      style="background-image: url('/images/me_rocks.png'); height: 60vh;"
    >
      <!-- Dark Overlay -->
      <div class="absolute inset-0 bg-black opacity-70 dark:opacity-80"></div>

      <!-- Text and Button Container -->
      <div
        class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8"
      >
      </div>

      <div class="py-10 px-16 text-center">
        <h2
          class="text-3xl sm:text-4xl font-bold mb-4 tracking-tight text-gray-100 drop-shadow-lg"
        >
          You know where to find me.
        </h2>
      </div>

      <div
        class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8"
      >
        <!-- Flexbox for Button -->
        <div
          class="py-10 px-16 flex flex-col items-center justify-center space-y-6"
        >
          <!-- Button under the icons -->
          <a
            href="/contact"
            class="inline-block text-white bg-sky-700 bg-opacity-20 border-2 border-sky-700 font-semibold rounded-full px-8 py-3 transition-colors duration-300 transform hover:bg-sky-700 hover:bg-opacity-40 shadow"
          >
            Let's Connect
          </a>
        </div>
      </div>
    </section>

    <section class="pt-16 sm:pt-24 md:pt-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- My Approach To Work Section -->
        <ContentSection
          title="What I'm Passionate About"
          text="I'm someone who loves nature, coffee, and people. My unique journey has shaped me into a developer who prioritizes both quality work and human connection. I thrive on collaboration and building meaningful digital experiences."
          imageSrc={passionateAbout.src}
          imageAlt="Man working in front of computer typing on keyboard"
        />

        <!-- Who I Am Section (with reversed layout) -->
        <ContentSection
          title="What It's Like To Work With Me"
          text="I'm someone who loves nature, coffee, and people. My unique journey has shaped me into a developer who prioritizes both quality work and human connection. I thrive on collaboration and building meaningful digital experiences."
          imageSrc={workWithMe.src}
          imageAlt="Man waving in front of computer"
          reverse={true}
        />
      </div>
    </section>
  </div>
</Layout>

<style>
  .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #ffffff, #dde4ee);
    min-height: 100vh;
  }

  .horizontal-gradient-wrapper-2 {
    background: linear-gradient(to bottom, #dde4ee, #ffffff, #dde4ee);
  }

  /* Dark mode gradient */
  :global(.dark) .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #45617c, #1f2937);
  }

  /* Dark mode gradient */
  :global(.dark) .horizontal-gradient-wrapper-2 {
    background: linear-gradient(to bottom, #1f2937, #3b536a, #1f2937);
  }

  /* global.css */
  .intro-text {
    font-size: 1.125rem;
    line-height: 1.75rem;
    color: var(--color-secondary);
    max-width: 40rem;
    margin: 2rem auto;
  }
  .highlight {
    font-weight: bold;
    color: var(--color-primary);
  }

  .content-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: center;
  }

  .content-section:nth-child(even) .content-image {
    order: 1; /* Move image first */
  }

  .content-section:nth-child(even) .content-text {
    order: 2; /* Move text second */
  }

  .content-section:nth-child(odd) .content-text {
    order: 1; /* Move text first */
  }

  .content-section:nth-child(odd) .content-image {
    order: 2; /* Move image second */
  }
</style>

<script type="module" src="/scripts/fadeIn.js"></script>
