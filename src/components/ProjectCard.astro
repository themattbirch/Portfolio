---
import { Image } from "astro:assets";

export interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  category: string;
  keyFeatures: string[];
  link: string;
}

const { title, description, image, category, keyFeatures, link } = Astro.props;
---

<div
  class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300 flex flex-col items-center text-center"
>
  <a href={link} target="_blank" rel="noopener noreferrer" class="w-full">
    <Image src={image} alt={title} class="w-full h-48 object-cover" />
  </a>
  <div class="p-6 w-full flex flex-col items-center">
    <span
      class="text-sm text-blue-600 dark:text-blue-400 uppercase font-semibold"
    >
      {category}
    </span>
    <h3 class="mt-2 text-2xl font-bold text-gray-800 dark:text-white">
      {title}
    </h3>
    <p class="mt-2 text-gray-600 dark:text-gray-300">
      {description}
    </p>
    <div class="mt-4 w-full">
      <span class="font-semibold text-gray-700 dark:text-gray-200">
        Key Features:
      </span>
      <ul class="mt-2 space-y-1">
        {
          keyFeatures.map((feature) => (
            <li class="text-gray-600 dark:text-gray-300 flex items-center justify-center">
              <!-- Font Awesome Checkmark Icon -->
              <i class="fas fa-check text-blue-600 mr-2"></i> 
              <span>{feature}</span>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="mt-6 w-full">
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors duration-300"
      >
        Visit Site
      </a>
    </div>
  </div>
</div>

<style>
  .project-card {
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 30px rgba(0, 0, 0, 0.2);
  }
  .project-card:hover img {
    transform: scale(1.05);
  }
  .project-card:hover h3 {
    color: #1d4ed8; /* Blue color on hover for light mode */
  }

  /* Dark mode styles */
  :root.dark .project-card:hover h3,
  [data-theme="dark"] .project-card:hover h3 {
    color: #3b82f6; /* Blue color on hover for dark mode */
  }

  .feature-tag:hover {
    background-color: #3b82f6;
    color: #fff;
  }

  :root.dark .project-card,
  [data-theme="dark"] .project-card {
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }
  :root.dark .project-card:hover,
  [data-theme="dark"] .project-card:hover {
    box-shadow: 0 20px 30px rgba(0, 0, 0, 0.4);
  }
</style>

