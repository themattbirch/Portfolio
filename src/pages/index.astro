---
const photo = "/images/headshot-tan tee-2.jpg";
import Layout from "../layouts/Layout.astro";
import Testimonials from "../components/Testimonials.astro";
import SkillsCard from "../components/SkillsCard.astro";
---

<Layout>
  <div class="hero-wrapper">
    <section
      class="hero relative flex flex-col items-center justify-center min-h-screen overflow-hidden"
    >
      <!-- Full-width Background Effects for Dark Mode and Light Mode -->
      <div class="absolute inset-0 z-0 w-full h-full">
        <!-- Dark Mode Background -->
        <div
          class="absolute inset-0 w-full h-full bg-gradient-to-b from-gray-100 to-gray-300 dark:from-gray-800 dark:to-gray-900"
        >
        </div>

        <!-- Light Mode Background Effects -->
        <div
          class="absolute top-1/4 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-gradient-to-br from-blue-200 to-purple-300 dark:hidden rounded-full opacity-30 blur-2xl"
        >
        </div>
        <div
          class="absolute bottom-1/4 right-1/2 transform translate-x-1/2 translate-y-1/2 w-[400px] h-[400px] bg-gradient-to-br from-pink-200 to-red-300 dark:hidden rounded-full opacity-30 blur-2xl"
        >
        </div>
      </div>

      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
        <!-- Profile Image Section -->
        <div class="relative w-[400px] h-[400px] mb-4 mx-auto">
          <img
            src={photo}
            alt="Matt Birch"
            class="w-full h-full object-cover rounded-full shadow-2xl"
          />
          <h1
            class="absolute bottom-[-40px] left-1/2 transform -translate-x-1/2 text-8xl font-extrabold z-20 text-teal-900"
          >
            Matt Birch
          </h1>
        </div>

        <!-- Text to the left and right of the image -->
        <div
          class="absolute w-full top-1/3 transform -translate-y-1/2 flex items-center justify-between px-12 z-0"
        >
          <p class="text-3xl font-bold rotate-[-15deg] hero-text">I'm Hero!</p>
          <p class="text-3xl font-bold rotate-[15deg] hero-text">
            You know it!
          </p>
        </div>

        <!-- Additional Info and Button -->
        <div class="text-center mt-4 z-20">
          <p
            class="text-2xl font-semibold mb-4 leading-relaxed max-w-2xl mx-auto hero-text"
          >
            I'm a web developer who creates beautiful and functional websites.
            Let's build something together.
          </p>
          <a
            href="#contact"
            class="inline-block bg-blue-600 hover:bg-blue-700 text-white py-4 px-10 rounded-full shadow-lg transition-all duration-300"
          >
            Get In Touch
          </a>
        </div>
      </div>
    </section>
  </div>

  <!-- Testimonials Section -->
  <section>
    <h2 class="text-4xl font-bold text-center mb-12 testimonials-title">
      Testimonials
    </h2>
    <div class="testimonials-section py-16 transition-colors duration-300">
      <div
        class="testimonials-container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8"
      >
        <Testimonials />
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="skills-section py-16 w-full transition-colors duration-300">
    <div class="mx-auto">
      <h2 class="text-4xl font-bold text-center mb-12 skills-title">Skills</h2>
      <div class="skills-container mx-auto">
        <SkillsCard />
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero-wrapper {
    margin-top: -4rem;
    margin-bottom: -4rem;
  }

  .hero {
    position: relative;
    z-index: 1;
  }

  :global(.dark) .hero-text {
    color: #ffffff;
  }

  .hero > div {
    position: relative;
    z-index: 2;
  }

  .testimonials-section {
    position: relative;
    z-index: 1;
    background-color: #1e293b; /* Dark grey background (Tailwind's gray-800) for light mode */
    border: 2px solid #2d3748; /* Add a border for better visibility */
    border-radius: 12px; /* Optional: to give it a rounded appearance */
  }

  :global(.dark) .testimonials-section {
    background-color: #1f2937; /* Tailwind's gray-800 */
    border: 2px solid #4b5563; /* Add a lighter border for dark mode */
    border-radius: 12px; /* Optional: to match the rounded appearance */
  }

  .skills-title {
    color: #1a202c; /* Dark color for light mode */
  }

  :global(.dark) .skills-title {
    color: #ffffff; /* Light color for dark mode */
  }

  .testimonials-container {
    margin-top: 2rem; /* Add some space between the title and the container */
  }
</style>
