---
import SkillsComponent from "@/components/SkillsComponent.astro";
import Layout from "@/layouts/Layout.astro";
import {
  Code,
  Laptop,
  Server,
  Brain,
  Users,
  Smartphone,
  Database,
  GitMerge,
  Settings,
  PenTool,
  Search,
  Globe2,
} from "lucide-react";

// --- The 6 Pillars of Expertise ---
const coreSkills = [
  {
    name: "Full-Stack Development",
    description:
      "I build complete, end-to-end web applications, handling everything from the server-side logic and database interactions to the interactive user interface.",
    icon: Code,
  },
  {
    name: "Frontend Architecture",
    description:
      "I specialize in creating fast, scalable, and maintainable user interfaces using modern frameworks like React and Next.js, with a deep focus on component design and state management.",
    icon: Laptop,
  },
  {
    name: "Backend & API Development",
    description:
      "I design and build secure, efficient RESTful APIs with Node.js and Express, enabling clean data flow between the client, server, and third-party services.",
    icon: Server,
  },
  {
    name: "AI Integration",
    description:
      "I leverage large language models like GPT-4 and Claude to build intelligent, dynamic features that create smarter and more personalized user experiences.",
    icon: Brain,
  },
  {
    name: "Product-Minded Engineering",
    description:
      "With a founder's perspective, I focus on the 'why' behind the work. I build features that align with business goals and deliver tangible value to the end-user.",
    icon: Users,
  },
  {
    name: "Mobile & PWA Development",
    description:
      "I create responsive, native-like experiences on any device by building installable Progressive Web Apps (PWAs) that are reliable, fast, and work offline.",
    icon: Smartphone,
  },
];

// --- The Toolbox (Additional Expertise) ---
const additionalSkills = [
  {
    name: "JavaScript & TypeScript",
    description:
      "Writing clean, modern, and type-safe JavaScript (ES6+) for robust application logic.",
    icon: Code,
  },
  {
    name: "React & Next.js",
    description:
      "Building component-based UIs with the most powerful and popular frontend library and framework.",
    icon: Laptop,
  },
  {
    name: "Node.js & Express",
    description:
      "Creating fast and scalable backend services for your application's core logic.",
    icon: Server,
  },
  {
    name: "Databases & BaaS (Supabase)",
    description:
      "Structuring data with PostgreSQL and leveraging the full Supabase platform for authentication, storage, and auto-generated RESTful APIs.",
    icon: Database,
  },
  {
    name: "Astro",
    description:
      "Developing blazingly fast, content-focused websites with a modern, island-based architecture.",
    icon: Settings,
  },
  {
    name: "HTML5 & CSS3",
    description:
      "Expert-level command of the foundational building blocks of the web, including modern CSS layouts.",
    icon: PenTool,
  },
  {
    name: "Version Control (Git)",
    description:
      "Managing codebases and collaborating with teams efficiently using Git and platforms like GitHub.",
    icon: GitMerge,
  },
  {
    name: "SEO & Content Strategy",
    description:
      "Drawing on my media background to inform technical SEO and content decisions that drive organic growth.",
    icon: Search,
  },
  {
    name: "Modern Build Tools (Vite)",
    description:
      "Utilizing fast, modern build tooling like Vite to optimize development workflows, enable hot module replacement (HMR), and bundle applications for production.",
    icon: Settings,
  },
  {
    name: "WordPress",
    description:
      "Proficient in custom WordPress development for specific client needs and legacy projects.",
    icon: Globe2,
  },
];

const pageTitle = "Technical Skills | Matt Birch";
const pageDescription =
  "Explore my full-stack technical skills. See my expertise in frontend architecture (React, Next.js), backend APIs (Node.js), AI integration, and mobile app development.";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogImage="/assets/images/technical-skills-programming.jpg"
  fullWidth={true}
>
  <div class="horizontal-gradient-wrapper">
    <!-- Introduction Section -->
    <section class="text-center mx-auto py-12 md:py-20 lg:py-24 xl:py-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="h1-text fade-in-up">Technical Skills I've Acquired</h1>
      </div>
    </section>

    <!-- Core Technical Skills Section -->
    <section class="pb-12 md:pb-20 lg:pb-24 xl:pb-32 fade-in-up">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SkillsComponent skills={coreSkills} />
      </div>
    </section>

    <!-- Additional Expertise Section -->
    <section class="pb-12 md:pb-20 lg:pb-24 xl:pb-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2
          class="text-2xl md:text-3xl lg:text-4xl font-bold text-center pb-12 md:pb-20 lg:pb-24 xl:pb-32 additional-skills dark:text-blue-200 skills-heading-color"
        >
          Additional Expertise
        </h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {
            additionalSkills.map((skill) => (
              <div class="bg-white dark:bg-gray-800 expertise-grid rounded-lg shadow-md p-6 transform transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
                {" "}
                <div class="flex items-center space-x-4 mb-4">
                  <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                    <skill.icon className="w-6 h-6 text-blue-600 dark:text-blue-300" />
                  </div>
                  <h3 class="text-xl font-semibold text-gray-800 dark:text-white">
                    {skill.name}
                  </h3>
                </div>
                <p class="text-gray-600 dark:text-gray-300">
                  {skill.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .expertise-grid {
    margin-bottom: 1rem;
  }

  .additional-skills {
    color: var(--primary-color);
  }
  .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #f0f4f8, #d9e2ec);
  }

  .horizontal-gradient-wrapper-1 {
    background: linear-gradient(to bottom, #d9e2ec, #f0f4f8);
  }

  :global(.dark) .horizontal-gradient-wrapper {
    background: linear-gradient(to bottom, #1e3a5f, #243b55);
  }

  :global(.dark) .horizontal-gradient-wrapper-1 {
    background: linear-gradient(to bottom, #243b55, #1e3a5f);
  }
</style>
