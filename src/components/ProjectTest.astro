---
export interface Props {
  title: string;
  description: string;
  imageSrc: string;
  category: string;
  keyFeatures: string[];
}

const { title, description, imageSrc, category, keyFeatures } = Astro.props;
---

<div
  class="project-card bg-[#1e293b] rounded-2xl overflow-hidden shadow-xl max-w-7xl mx-auto transition-transform duration-300 hover:scale-105"
>
  <div class="flex flex-col md:flex-row md:h-[450px]">
    <img
      class="w-full md:w-3/5 h-64 md:h-full object-cover transition-transform duration-300"
      src={imageSrc}
      alt={title}
    />
    <div
      class="p-8 md:w-2/5 flex flex-col items-center justify-center text-center h-full space-y-6"
    >
      <span class="text-gray-400 uppercase tracking-widest text-sm">
        {category}
      </span>
      <h2
        class="font-serif text-3xl font-bold text-white transition-colors duration-300"
      >
        {title}
      </h2>
      <p class="text-gray-300 leading-relaxed">{description}</p>
      <div>
        <span class="font-bold text-gray-200 block mb-2">Key Features:</span>
        <div class="flex flex-wrap justify-center gap-3">
          {
            keyFeatures.map((feature) => (
              <span class="feature-tag bg-gray-700 text-gray-300 px-3 py-1 rounded-full text-sm transition-all duration-300">
                {feature}
              </span>
            ))
          }
        </div>
      </div>
      <!-- Spacer or padding adjustment -->
      <div class="space"></div>
      <button
        class="view-project-btn bg-green-600 text-white font-bold py-2 px-6 rounded-lg transition-transform duration-300"
      >
        View Project
      </button>
    </div>
  </div>

  <style>
    .project-card {
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }
    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 30px rgba(0, 0, 0, 0.3);
    }
    .project-card:hover img {
      transform: scale(1.05);
    }
    .project-card:hover h2 {
      color: #4ade80; /* Green color on hover */
    }
    .feature-tag:hover {
      background-color: #4ade80;
      color: #1e293b;
    }
    .view-project-btn:hover {
      background-color: #22c55e;
      transform: translateY(-2px);
      box-shadow: 0 4px 6px rgba(34, 197, 94, 0.25);
    }
  </style>
</div>
