---
export interface Props {
  title: string;
  text: string;
  imageSrc: string;
  imageAlt: string;
  reverse?: boolean;
}
const { title, text, imageSrc, imageAlt, reverse = false } = Astro.props;
---

<div
  class={`md:grid md:grid-cols-2 gap-24 items-center pb-24 sm:pb-32 fade-in-up ${reverse ? "md:grid-flow-dense" : ""}`}
  style={`grid-template-areas: "${reverse ? "image text" : "text image"}";`}
>
  <!-- Text Column -->
  <div class="text-left mb-8 md:mb-0" style="grid-area: text;">
    <h2 class="text-3xl font-bold mb-6 text-blue-800 dark:text-blue-300">
      {title}
    </h2>
    <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
      {text}
    </p>
  </div>

  <!-- Image Column -->
  <div class="overflow-hidden rounded-lg shadow-lg" style="grid-area: image;">
    <img
      src={imageSrc}
      alt={imageAlt}
      class="w-full h-auto object-cover rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-300"
    />
  </div>
</div>
