---
import Layout from "../layouts/Layout.astro";
import Testimonials from "../components/Testimonials.astro";
import Hero from "../components/Hero.astro";
import SkillsSection from "../components/SkillsSection.jsx";
import CTASection from "../components/CTASection.astro";
import ServiceCard from "../components/ServiceCard.astro";
import QualityItem from "../components/QualityItem.astro";
import { Image } from "astro:assets";
import meHeroImg from "../assets/images/matt-pointing.webp";

const services = [
  {
    title: "Custom Web Development",
    description: "Build websites using HTML, CSS and JavaScript.",
  },

  {
    title: "Results-Driven Copywriting",
    description: "copy that ACHIEVERS THEIR GOALS.",
  },
  {
    title: "Responsive Design",
    description:
      "Ensure your website looks great and functions flawlessly on all devices.",
  },
  {
    title: "*Ongoing Support*",
    description:
      "Regular maintenance and updates to keep your website secure and up-to-date.",
  },
];

const qualities = ["Reliable", "Multi-skilled", "Experienced", "Passionate"];
const half = Math.ceil(qualities.length / 2);
const leftQualities = qualities.slice(0, half);
const rightQualities = qualities.slice(half);
const pageTitle = "Matt Birch, Front-End Web Developer";
const pageDescription = "A web develoepr with passion";
---

<Layout title={pageTitle} description={pageDescription} fullWidth={true}>
  <!-- Hero Section -->
  <section>
    <Hero />
  </section>

  <!-- What I Can Do For You Section -->
  <section
    class="py-8 sm:py-12 md:py-16 lg:py-20 xl:py-24 bg-background-secondary dark:bg-background-dark transition-colors duration-300"
  >
    <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div
        class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-8"
      >
        <!-- Text Column -->
        <div class="w-full lg:w-2/3 xl:w-3/4 mb-8 lg:mb-0">
          <h2 class="h2-text mb-6 sm:mb-8">What I Can Do for You</h2>
          <p class="mb-6 sm:mb-8 leading-relaxed">
            I help businesses grow their online presence by building
            user-friendly websites with custom copywriting so they can achieve
            their goals. My entrepreneurial mindset and unique mix of technical
            and soft skills gets the job done <span
              class="text-blue-700 dark:text-blue-300 italic">on time</span
            >.
          </p>

          <!-- Image Column for smaller screens -->
          <div class="lg:hidden w-full mx-auto mb-6 sm:mb-8">
            <div class="image-container">
              <Image
                src={meHeroImg}
                alt="Matt showcasing skills for clients"
                class="w-full h-auto object-contain mx-auto"
                width={800}
                height={600}
                loading="lazy"
              />
            </div>
          </div>

          <p class="mb-6 sm:mb-8">Here's what I deliver for clients:</p>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-8">
            {
              services.map((service) => (
                <ServiceCard
                  title={service.title}
                  description={service.description}
                />
              ))
            }
          </div>
        </div>

        <!-- Image Column for larger screens -->
        <div class="hidden lg:block w-1/3 xl:w-1/4">
          <div class="image-container">
            <Image
              src={meHeroImg}
              alt="Matt showcasing skills for clients"
              class="w-full h-auto object-contain mx-auto"
              width={800}
              height={600}
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section
    class="testimonials-section max-w-7xl pt-12 md:pt-20 lg:pt-24 xl:pt-32 pb-4 sm:pb-6 md:pb-8 lg:pb-12 mx-auto px-4 sm:px-6 lg:px-8"
  >
    <h2
      class="h2-text text-left sm:text-center mb-8 sm:mb-12 md:mb-20 lg:mb-24 xl:mb-32 relative text-headingLight dark:text-headingDark px-2 sm:px-4"
    >
      Ask My Clients About Projects I've Completed
    </h2>
    <div
      class="testimonial-container overflow-hidden rounded-lg md:rounded-full max-w-7xl mx-auto transition-colors duration-300 px-2 sm:px-4"
    >
      <Testimonials />
    </div>
  </section>

  <!-- Unique Sales Proposition Area -->
  <section
    class="pb-12 md:pb-20 lg:pb-24 xl:pb-32 pt-4 sm:pt-6 md:pt-10 lg:pt-12 xl:pt-16 max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 transition-colors duration-300"
  >
    <div class="max-w-7xl mx-auto">
      <h2
        class="text-xl sm:text-2xl md:text-3xl lg:text-3xl font-bold text-blue-950 mb-6 sm:mb-8 text-headingLight dark:text-headingDark"
      >
        They Know What Separates Me From Other Web Developers
      </h2>
      <!-- Flexbox container for the two columns -->
      <div
        class="flex flex-col md:flex-row justify-between space-y-8 md:space-y-0 md:space-x-8"
      >
        <!-- Left column: 2 list items -->
        <ul class="list-disc space-y-4 w-full md:w-1/2 pl-6 md:pl-8">
          <li class="text-base sm:text-lg">
            A cross-functional expert who understands how systems fit together.
          </li>
          <li class="text-base sm:text-lg">*EXPERIENCED*</li>
        </ul>

        <!-- Right column: 2 list items -->
        <ul class="list-disc space-y-4 w-full md:w-1/2 pl-6 md:pl-8">
          <li class="text-base sm:text-lg">
            Strong awareness of how to both fulfill user needs and achieve
            business goals.
          </li>
          <li class="text-base sm:text-lg">
            Team-focused, collaborative mindset with great communication skills
          </li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Skills Section Wrapper with Background Color -->
  <section
    class="bg-background-skills dark:bg-background-dark py-12 md:py-20 lg:py-24 xl:py-32 transition-colors duration-300"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <SkillsSection client:load />
    </div>
  </section>

  <section
    class="py-12 md:py-16 lg:py-20 max-w-screen-xl mx-auto px-4 sm:px-6 text-center"
  >
    <h2
      class="h2-text mb-10 text-center text-headingLight dark:text-headingDark"
    >
      What You See Is What You Get
    </h2>

    <div class="flex justify-center">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 justify-items-center">
        <!-- Left Column -->
        <ul class="space-y-6">
          {leftQualities.map((quality) => <QualityItem text={quality} />)}
        </ul>

        <!-- Right Column -->
        <ul class="space-y-6">
          {rightQualities.map((quality) => <QualityItem text={quality} />)}
        </ul>
      </div>
    </div>

    <!-- Subtle underline effect -->
    <div class="flex justify-center my-12">
      <div class="w-12 border-t-2 border-gray-300 dark:border-gray-600"></div>
    </div>

    <!-- CTA Card -->
    <CTASection />
  </section>

  <style>
    .image-container {
      width: 100%;
      height: auto;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 2rem;
    }

    .image-container img {
      width: 100%;
      max-width: 400px;
      height: auto;
      object-fit: contain;
    }

    @media (max-width: 768px) {
      .image-container img {
        width: 50vw;
        max-width: 500px;
      }
    }

    @media (max-width: 1024px) {
      .image-container img {
        width: 55vw;
        height: 45vh;
        max-width: 1000px;
      }
    }

    @media (min-width: 1024px) {
      .image-container img {
        width: 25vw;
        max-width: 650px;
      }
    }
    .icon-checkmark {
      transition:
        transform 0.3s ease-in-out,
        opacity 0.3s ease-in-out;
    }

    /* Hover Effect for icons */
    li:hover .icon-checkmark {
      transform: scale(1.3);
      opacity: 1;
    }

    li:hover span {
      color: #1d4ed8;
      font-weight: 500; /* Adds a color change to text on hover */
    }

    @media (max-width: 820px) {
      .flex-row {
        flex-direction: column;
      }
    }
  </style>
</Layout>
