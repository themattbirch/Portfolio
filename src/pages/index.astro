---
// index.astro
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  {
    title: "Client Website 1",
    description: "A responsive website for a local business",
    image: "/images/project1.jpg",
    tags: ["HTML", "CSS", "JavaScript", "Responsive Design"],
    githubLink: "#",
    liveLink: "#",
  },
  {
    title: "E-commerce Platform",
    description: "A full-featured online store built with React",
    image: "/images/project2.jpg",
    tags: ["React", "Node.js", "MongoDB", "Stripe"],
    githubLink: "#",
    liveLink: "#",
  },
];
---

<Layout title="Matt Birch | Web Developer">
  <main class="bg-gray-900 text-white">

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-20 grid grid-cols-1 lg:grid-cols-2 gap-12">
        <section>
          <h2 class="text-3xl font-bold mb-6">My Skills</h2>
         
        </section>

        <section>
          <h2 class="text-3xl font-bold mb-6">Featured Projects</h2>
          <div class="space-y-8">
          </div>
        </section>
      </div>
    </div>

    <section class="py-20 bg-gradient-to-r from-gray-800 to-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold mb-6 text-center">
          Let's Create Something Amazing
        </h2>
        <p class="text-center mb-8 max-w-2xl mx-auto">
          I'm passionate about turning ideas into reality. Whether you need a
          stunning website, AI-powered solutions, or compelling copy, I'm here
          to help.
        </p>
        <div class="flex justify-center space-x-4">
          <a
            href="/contact"
            class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-full transition duration-300"
          >
            Get in Touch
          </a>
          <a
            href="/projects"
            class="bg-transparent border border-green-500 text-green-500 hover:bg-green-500 hover:text-white font-bold py-2 px-4 rounded-full transition duration-300"
          >
            View All Projects
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

