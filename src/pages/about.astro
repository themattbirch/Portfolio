---
import Layout from "../layouts/Layout.astro";
const headshot = "/images/headshot-tan-tee-2.jpg";
const laptop = "/images/new-illustration.png";
const pageTitle = "About Matt Birch | Web Developer";
const pageDescription =
  "Learn about Matt Birch's journey as a front-end web developer, his skills, and his approach to creating exceptional web experiences.";
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- About Section -->
  <section
    class="about-content max-w-screen-xl mx-auto py-8 sm:py-16 px-4 sm:px-6 lg:px-8 transition-colors duration-300 w-full text-center"
  >
    <h1 class="h1-text heading-text text-center mb-8 md:mb-12">
      {pageTitle}
    </h1>
  </section>

  <!-- Image Container with Centering -->
  <section
    class="about-content max-w-screen-xl mx-auto py-8 sm:py-16 px-4 sm:px-6 lg:px-8 transition-colors duration-300 w-full text-center"
  >
    <div class="flex justify-center mb-8">
      <div
        class="rounded-full p-1 bg-gradient-to-r from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-600 shadow-[0_10px_20px_rgba(0,0,0,0.1)] dark:shadow-[0_10px_20px_rgba(255,255,255,0.1)] transition duration-300 ease-in-out hover:-translate-y-1 hover:shadow-[0_20px_30px_rgba(0,0,0,0.2)] dark:hover:shadow-[0_20px_30px_rgba(255,255,255,0.2)]"
      >
        <img
          src={headshot}
          alt="Matt Birch headshot"
          class="w-48 h-48 sm:w-64 sm:h-64 rounded-full border border-gray-200 dark:border-gray-700"
          width="256"
          height="256"
        />
      </div>
    </div>
    <p class="text-lg mb-6 leading-relaxed max-w-2xl mx-auto about-text">
      Hello! I'm Matt Birch, a passionate front-end web developer with expertise
      in HTML, CSS, JavaScript, Astro, and React.
    </p>
  </section>

  <!-- My Journey Text Section -->

  <section
    class="about-content max-w-screen-2xl mx-auto py-8 sm:py-16 px-4 sm:px-6 lg:px-8 transition-colors duration-300 w-full text-center"
  >
    <h2 class="text-2xl font-semibold mb-4 about-text">My Journey</h2>
    <p class="text-lg mb-6 leading-relaxed max-w-2xl mx-auto about-text">
      GARCON
    </p>
  </section>

  <!-- Image Amd Text Section -->

  <section
    class="about-content max-w-screen-2xl mx-auto py-8 sm:py-16 px-4 sm:px-6 lg:px-8 transition-colors duration-300 w-full text-center"
  >
    <div class="flex justify-center mb-8">
      <img
        src={laptop}
        alt="animated image"
        class="w-full h-auto"
        width="100%"
        height="auto"
      />
    </div>
    <h2 class="text-2xl font-semibold mb-4 about-text">My Journey</h2>
    <p class="text-lg mb-6 leading-relaxed max-w-2xl mx-auto about-text">
      GARCON
    </p>
  </section>

  <!-- Combined CTA and Background Image Section -->
  <section
    class="relative w-full bg-cover bg-center"
    style="background-image: url('/images/me_rocks.png'); height: 100vh;"
  >
    <div class="absolute inset-0 bg-black bg-opacity-10">
      <div
        class="absolute top-[2%] left-1/2 transform -translate-x-1/2 w-full max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 text-center"
      >
        <div
          class="bg-white/10 backdrop-blur-md py-10 px-16 rounded-full inline-block shadow-md"
        >
          <h3
            class="text-3xl sm:text-4xl font-bold mb-4 tracking-tight text-white drop-shadow-sm"
          >
            You know where to find me.
          </h3>
          <p class="text-xl sm:text-2xl mb-8 text-white drop-shadow-sm">
            You can hire me.
          </p>
          <a
            href="/contact"
            class="inline-block bg-teal-500 text-white
        hover:bg-teal-600 font-semibold rounded-full px-8 py-3 transition-colors
        duration-300 transform hover:scale-105 shadow"
          >
            Let's Connect
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
