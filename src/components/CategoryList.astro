---
import type { CollectionEntry } from "astro:content";

type Props = {
  categories: string[];
  title?: string;
};

const { categories, title } = Astro.props;

const getCategoryUrl = (category: string) =>
  `/category/${category.toLowerCase().replace(/\s+/g, "-")}`;
---

<div class="category-section my-8">
  {title && <h2 class="text-2xl font-bold mb-4 text-center">{title}</h2>}
  <div class="flex flex-wrap justify-center gap-4">
    {
      categories.map((category) => (
        <a
          href={getCategoryUrl(category)}
          class="category-button text-blue-700 dark:text-white rounded-full px-6 py-3 text-lg font-semibold border-2 border-blue-700 dark:border-white hover:bg-sky-100 dark:hover:bg-teal-900 transition-colors duration-300"
        >
          {category}
        </a>
      ))
    }
  </div>
</div>

<style>
  .category-button {
    white-space: nowrap;
  }

  @media (max-width: 640px) {
    .category-button {
      font-size: 0.875rem;
      padding: 0.5rem 1rem;
    }
  }
</style>
